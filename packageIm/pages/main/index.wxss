.navTab .jiaobiao {
  position: relative;
  padding-right: 20rpx;
}

.navTab .jiaobiao:before {
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  line-height: 0;
  font-size: 0;
  border-top: 12rpx solid transparent;
  border-right: 10rpx solid #999999;
  border-bottom: 0rpx solid #ccc;
  border-left: 0rpx solid #ccc;
  bottom: 5rpx;
  right: 0;
}

.navTab .active {
  color: #1d2129;
  font-weight: bold;
}

.navTab .active.jiaobiao:before {
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  line-height: 0;
  font-size: 0;
  border-top: 12rpx solid transparent;
  border-right: 10rpx solid #000000;
  border-bottom: 0rpx solid #ccc;
  border-left: 0rpx solid #ccc;
  bottom: 5rpx;
  right: 0;
}

.navTab .termBox {
  background: #fff;
  position: absolute;
  z-index: 10001;
  left: 0;
  width: 100%;
  padding: 30rpx 30rpx 12rpx;
  display: flex;
  flex-wrap: wrap;
  color: #666666;
  font-size: 26rpx;
  top: 82rpx;
}

.navTab .termBox .item {
  background: #F5F5F5;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  margin: 0 18px 18px 0;
  width: 206rpx;
  border-radius: 8rpx;
  color: #666666;
}

.navTab .termBox .item:nth-child(3n + 3) {
  margin-right: 0;
}

.navTab .termBox .active {
  border: 2rpx solid #FE0201;
  color: #FE0201;
  background: rgba(244, 47, 47, 0.1);
}

