.longpressModelBg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: transparent;
  z-index: 900;
}

.maskBg {
  width: 100%;
  height: 100%;
  background: transparent;
  position: fixed;
  top: 0;
  left: 0;
}

.longpressModel {
  position: absolute;
  top: 46%;
  right: 90rpx;
  z-index: 999;
}

.longpressModel .caozuoList {
  width: 246rpx;
  height: auto;
  position: relative;
  z-index: 100;
  background: #FFFFFF;
  box-shadow: 22rpx 22rpx 200rpx 28rpx rgba(0, 0, 0, 0.12);
}

.caozuoList::before {
  background: #fff;
  box-shadow: -1px -1px 10px rgba(0, 0, 0, .09);
  content: "";
  height: 12px;
  left: calc(50% - 6px);
  position: absolute;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  width: 12px;
  left: 12px;
  top: -5px;
  z-index: 10;
  border-radius: 8rpx 0 0 0;
}

.caozuoItem {
  width: 246rpx;
  position: relative;
  z-index: 99;
  height: 84rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  line-height: 84rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #F5F5F5;
}

.caozuoItem image {
  width: 34rpx !important;
  height: 28rpx !important;
  margin-right: 22rpx;
  border-radius: 0 !important;
}

.caozuoItem text {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #1D2129;
}

.caozuoItem:last-child {
  border-bottom: none !important;
}

.figure {
  width: 46px;
  float: left;
  position: relative;
  display: flex;
  margin-right: 10px;
}

.figure .badge {
  position: relative;
  display: inline-block;
}

.figure .image-content {
  width: 46px;
  height: 46px;
  display: flex;
  overflow: hidden;
  align-items: center;
  border-radius: 100%;
  background: linear-gradient(90deg, #fafafa, #f8f8f8);
}

.figure .image-content image {
  width: 100%;
  margin: 0;
}

.figure .badge .badge-count-common-less {
  top: -3px;
  right: -4px;
  font-size: 12px;
  min-width: 16px;
  line-height: 16px;
  border-radius: 16px;
  height: 16px;
}

.badge-count {
  position: absolute;
  background: linear-gradient(90deg, #F53131 0%, #FF7777 100%);
  border: 1rpx solid #FFFFFF;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  z-index: 1;
  font-weight: 400;
  /* padding: 0 6rpx; */
}
.badge-count span{
  display: inline-block;
  padding: 0 8rpx;
}