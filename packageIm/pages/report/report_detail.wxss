/* subpackPage/user/feedback/index.wxss */
page{
    background-color: #F5F5F5;
    padding-bottom: 300rpx;
    box-sizing: border-box;
}
.content{
    background-color: #fff;
    margin: 0 32rpx;
    border-radius: 32rpx;
    margin-top: 70rpx;
    padding: 58rpx 36rpx 36rpx 36rpx ;
    box-sizing: border-box;
}

.head{
    font-size: 26rpx;
    font-weight: bold;
    color: #1D2129;
}
.list{
    display: flex;
    justify-content: space-between;
    margin-top: 22rpx;
    margin-bottom: 44rpx;
}
.head_item{
    font-size: 26rpx;
    
    font-weight: 400;
    color: #1D2129;
    border-bottom: 1px solid #e6e6e6;
    width: 100%;
    padding-bottom: 24rpx;
}
.active{
    background: rgba(246,172,172,0.2) !important;
    border: 1rpx solid #F53939 !important;
    color: #F32E2E !important;
}
textarea{
    width: 100%;
    height: 241rpx;
    border-radius: 16rpx;
    /* opacity: 0.34; */
    border: 1rpx solid rgba(0,0,0,0.2);
    margin-top: 22rpx;
    margin-bottom: 36rpx;
    position: relative;
    padding-bottom: 40rpx;
    box-sizing: border-box;
    padding: 22rpx 22rpx 74rpx 22rpx;
    font-size: 26rpx;
}
.number{
    font-size: 22rpx;
    
    font-weight: 400;
    color: #999999;
    position: absolute;
    right: 22rpx;
    bottom: 10rpx;
    width: 100%;
    text-align: right;

}
.cen{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 58rpx 58rpx 22rpx 68rpx;
}
.cen_text{
    font-size: 22rpx; 
    color: #999999;
}
.cont_img{
    margin: 0 68rpx;
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
}
.img{
    width:143rpx;
    height: 143rpx;
    border-radius: 8rpx;
    margin-right: 16rpx;
}
.img:last-child{
    margin-right: 0 !important;
}
.clone{
    width: 30rpx;
    height: 30rpx;
    background: #3D3D3D;
    color: #fff;
    text-align: center;
    line-height: 26rpx;
    border-radius: 15rpx;
    font-size: 25rpx;
    position: absolute;
    top: -6rpx;
    right: -6rpx;
}
.img_item{
    width: 144rpx;
    height: 144rpx;
    border-radius: 8rpx;
    color: #999999;
    text-align: center;
    line-height: 144rpx;
    font-size: 30px;
    margin-right: 16rpx;
    position: relative;
    margin-bottom: 20rpx;
    margin-right: 40rpx;
}
.item_bg{
    background-color: #fff;
}

.fot_btn{
    position: fixed;
    bottom: 20rpx;
    width: 100%;
    z-index: 99;
    background-color: #F5F5F5;
}

.sub_btn{
    height: 72rpx;
    /* background: #FFFFFF linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 16rpx;
    /* opacity: 0.6; */
    flex: 1;
    text-align: center;
    line-height: 72rpx;
    font-size: 30rpx; 
    color: #FFFFFF;
    margin:  0 55rpx;
    margin-bottom: 44rpx;
}
.text{
    font-size: 22rpx;
    
    font-weight: 400;
    color: #999999;
    margin: 0 48rpx 0 48rpx;
    line-height: 36rpx;
}
.scroll{
    height: calc(100% - 300rpx);
}