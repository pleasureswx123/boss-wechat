/* packageIm/pages/report/index.wxss */
page{
    
    background-color: #fff;
    box-sizing: border-box;
}
.box{
    padding: 0rpx 48rpx;
    box-sizing: border-box;
    width: 100vw;
    height: 100vh;
    /* overflow: hidden; */
    overflow: auto;
}
image{
    width: 20rpx;
    height: 28rpx;
}

.list{
    display: flex;
    justify-content: space-between;
    padding: 44rpx 0 ;
    border-bottom: 2rpx solid #ededed;
}
.item text{
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
}


.btn{
    width: 168rpx;
    height: 54rpx;
    background: #f5f5f5;
    border-radius: 28rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 54rpx;
    text-align: center;
    position: fixed;
    bottom: 50rpx;
    right: 50rpx;
}
.content{
    padding:56rpx 40rpx ;
}
.head{
    font-size: 40rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
}
.radio_item{
    display: flex;
    justify-content: space-between;
    padding: 24rpx 0;
    align-items: center;
    font-size: 28rpx;
}

.pop_btn{
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0,0,0,0.08);
    padding: 36rpx 0 64rpx;
}
.pop_btn button{
    height: 80rpx;
    background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
    border-radius: 12rpx;
    margin: 0 48rpx;
    font-size: 36rpx;
    
    font-weight: 400;
    color: #FFFFFF;
}

.top_tabs {
    background-color: #F5F5F5 !important;
    height: 80rpx;
}

.top_tabs .van-tabs__nav {
    background-color: #F5F5F5 !important;
}

.tab_main{
    height: calc(100% - 80rpx - 15px);
    overflow: auto;
}

/* 举报记录 */
.content{
    padding: 28rpx 48rpx ;
    background-color: #fff;
    border-radius: 16rpx;
    margin-bottom: 15px;
}
.text{
    font-size: 22rpx;
    
    font-weight: 400;
    color: #666666;
    text-align: right;
}
.textAC{
    color:#FE0201 !important ;
}
.head{
    padding-bottom: 40rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    border-bottom: 1px solid #f5f5f5;
}
.head_top{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.head_top .textBox{
    
}
.head_text{
    font-size: 26rpx;
    
    font-weight: 400;
    color: #999999; 
}
.img_box{
    display: flex;
    align-items: center;
    padding-top: 26rpx;
}
.img_box image{
    width: 72rpx;
    height: 72rpx;
    border-radius: 16rpx;
    margin-right: 24rpx;
}
.right view{
    font-size: 26rpx;
    
    font-weight: 400;
    color: #1D2129;
}