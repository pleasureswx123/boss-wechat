/* subpackPage/user/setup/notice/index.wxss */
page{
    background-color: #ffffff;
    padding: 0 48rpx;
    box-sizing: border-box;
}
.head{
    font-size: 22rpx;
    
    font-weight: 400;
    color: #666666;
    margin-top: 40rpx;
}
.item{
    width: 100%;
    display: flex;
    justify-content: space-between;
    height: 160rpx;
    align-items: center;
    box-sizing: border-box;
    border-bottom: 1px solid #f5f5f5;
    font-size: 28rpx;
    color: #1D2129;
}
.top view{
    font-weight: 400;
    color: #1D2129;
}
.top text{
    font-size: 22rpx;
    font-weight: 400;
    color: #1D2129;
}
.topBox{
    display: flex;
    flex-direction: row;
    width: 100%;
}
.hIcon{
    width: 92rpx;
    height: 92rpx;
    border-radius: 50%;
    display: flex;
    flex-shrink: 0;
}
.topBox .name{
    display: flex;
    flex-direction: column;
    width: 100%;
    font-size: 28rpx;
    margin-left: 20rpx;
}
.name .n1{
    font-size: 34rpx;
    color:#1D2129;
}
.name .n2{
    font-size: 24rpx;
    color:#999999;
}
.btn{
    height: 80rpx;
    background: #F5F5F5;
    border-radius: 12rpx;
    color:#666;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40px;


    border: 1rpx solid #ebebeb;
    font-size: 32rpx;
    font-weight: 400;
    color: #666666;
    background: #f1f1f1;
}
.van-switch__node{
    top: 50% !important;
    left: 4rpx !important;
    height: 14px !important;
    width: 14px !important;
    transform: translateY(-50%) !important;
}

.van-switch {
    border: none !important;
    width: 72rpx !important;
    height: 39rpx !important;
}

.van-switch--on .van-switch__node{
    left: 100% !important;
    transform:translateY(-52%) translateX(-110%) !important;
}