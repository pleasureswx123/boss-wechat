.text-input {
    width: 100%;
    /* height: 100rpx; */
    padding: 0;
    display: block;
}

.news {
    width: 410rpx;
    font-size: 14px;
    line-height: 14px;
    padding:10px;
    margin: 10rpx;
    position: relative;
    background-color: #f9f9f9;
    border-radius: 16px;
    flex: 1;
    max-height: 200rpx;
    overflow: auto;
    border-radius: 10rpx;
    height: 82rpx;
    margin-right: 20rpx;
}

.send_btn {
    width: 80rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 17px;
    color: #000;
    padding: 0;
    display: inline-block;
    float: right;
    margin: 8rpx 16rpx auto auto;
    background-color: #fff;
}

.f-row {
    /* height:100rpx; */
    display: flex;
    align-items: center;
    background-color: #fff;
}

.send-btn-style {
    font-size: 10px;
    /* background-color: #2196F3; */
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    color: #fff;
    margin-right: 10px;
    padding: 0 10px;
    border-radius: 5px;
}

.hover {
    background-color: #F32E2E
}

.icon-mic {
    width: 52rpx;
    height: 52rpx;
    margin-right: 20rpx;
    position: relative;
    top: 4px;
}

.f-row-x {
    padding-bottom: 30px;
    display: flex;
    align-items: center;
    background-color: #f2f2f2;
}

.useful {
    width: 100rpx;
    height: 60rpx;
    /* background: #F94E4E; */
    background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 10rpx;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #fff;
    text-align: center;
    margin: 20rpx;
    margin-left: 28rpx;
    margin-right: 10rpx;
}
.ql-container{
  min-height: 40rpx !important;
  height: auto;
  max-height: 300rpx;
  font-style: normal;
}