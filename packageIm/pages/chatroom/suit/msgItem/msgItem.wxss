.message {
  height: auto;
  padding: 0 30rpx;
  position: relative;
  clear: both;
  /* margin-bottom: 5px; */
}

.time {
  margin: 14rpx 0;
  text-align: center;
}

.time .time-text {
  display: inline-block;
  padding: 6rpx 20rpx 0 20rpx;
  font-size: 20rpx;
  color: #999999;
  line-height: 28rpx;
  border-radius: 4rpx;
  /* background-color: #dcdcdc; */
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  margin: 0 20rpx 0 0;
  border-radius: 72rpx;
  float: left;
}

.borderL {
  border-radius: 18rpx 6rpx 18rpx 18rpx;
}

.borderR {
  border-radius: 6rpx 18rpx 18rpx 18rpx;
}

.readStatus {
  font-size: 20rpx;

  font-weight: 400;
  color: #999999;
  position: absolute;
  left: -60rpx;
  bottom: 6rpx;
}

.msg {
  display: inline-block;
  padding: 15rpx 18rpx 2rpx;
  max-width: calc(85% - 80rpx);
  min-height: 40rpx;
  font-size: 24rpx;
  /*overflow: hidden;*/
  text-align: left;
  word-break: break-all;
  background-color: #fff;
  position: relative;
  /* margin-top: 24rpx; */
  margin-top: 8rpx;
  margin-bottom: 26rpx;
}

.msg .msg_poprightarrow {
  position: absolute;
  right: -10rpx;
  height: 18rpx;
  width: 18rpx;
  margin-top: -10rpx;
}

.msg .msg_popleftarrow {
  position: absolute;
  left: -14rpx;
  height: 18rpx;
  width: 18rpx;
  margin-top: -10rpx;
}

.msg .msg-text {
  line-height: 40rpx;
  font-size: 28rpx;
  margin: 0;
}


.self {
  text-align: right;
}

.self .avatar {
  float: right;
  margin: 0 0 0 20rpx;
}

.self .msg {
  background-color: #FFE7E7;
  color: #1D2129;
}

.onlyEmoji{
  background-color: transparent !important;
}

.self .msg:before {
  right: inherit;
  left: 100%;
  border-right-color: transparent;
  border-left-color: #b2e281;
}

.template {
  display: inline-block;
  margin-right: 6rpx;
}

.err {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: -40rpx;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.chehui {
  width: 70px;
  height: 35px;
  line-height: 35px;
  position: absolute;
  top: -38px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  border-radius: 10px;
  font-size: 13px;
  right: 0px;
}