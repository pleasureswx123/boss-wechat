.audio-player {
	position: relative;
	overflow: hidden;
	display: flex;
  transition: opacity .5s;
  margin-bottom: 10rpx;
}

.audio-player .controls {
	height:40rpx;
	align-items:center;
	display:flex;
}

.audio-player .controls image {
	height: 30rpx;
	width: 20rpx;
	margin: 0 8rpx 0 20rpx;
}

.audio-player .time {
	font-size: 24rpx;
	line-height: 40rpx;
	flex: 1;
	text-align: left;
}
