.backIcon {
  width: 100vw;
  display: flex;
  position: fixed;
  top: 0;
  z-index: 9999;
  align-items: center;
  padding-top: 20px;
  margin-left: 20rpx;
  height: 40px;
}

.top_bg {
  width: 100%;
  position: absolute;
  z-index: 1000;
  height: 198rpx;
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
}

