page{
    background: #f5f5f5;
    overflow: hidden;
    height: 100%;
    width: 100%;
}

.usefulBox{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.usefulBox_content{
  flex: 1;
  overflow: auto;
}

.usefulBox_footer{
  height: 180rpx;
  padding: 0 48rpx;
  box-sizing: border-box;
}
.scrollBox{
  height: 100%;
    /* height: calc(100vh - 160rpx); */
}

.useful_list{
  padding: 0 48rpx;
  box-sizing: border-box;
}
.addBtn{
    height: 80rpx;
    /* background: #FFFFFF linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 16rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
    color:#fff;
    margin-top: 30rpx;
}
.item{
    height: 120rpx;
    overflow: hidden;
    line-height: 120rpx;
    /* margin:0 32rpx; */
    display: flex;
    border-bottom: 2rpx solid #ededed;
    flex-direction: row;
    justify-content:space-between;
    padding:20rpx 0;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
}
.right_icon {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.editIcon{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.right_icon image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}
.editBtns{
    display: flex;
    flex-direction: row;
    height: 100%;
}
.editBtns image{
    width: 38rpx;
    height: 38rpx;
    margin-left: 10px;
}
.editBtns .sbtn{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}