page{
    background-color: #f5f5f5;
}
.offerbg{
    width: 750rpx;
    height: 1426rpx;
    position: absolute;
    top:-2px;
    left: 0;
    z-index: 1;
}
.content{
    position: relative;
    display: flex;
    flex-direction: column;
    z-index: 2;
    padding:182rpx 44rpx 0;
}
.faceBox{
    display: flex;
    justify-content: flex-end;
}
.faceImg{
    width: 272rpx;
    height: 274rpx;
}
.logo{
    height: 130rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.logo image{
    width: 78rpx;
    height: 78rpx;
    margin-bottom: 20rpx;
    flex-shrink: 0;
}
.logo .name{
    font-size: 36rpx;
    color: #1D2129;
    font-weight: 600;
    max-width: 400rpx;
}
.cont{
    padding: 80rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    color: #1D2129;
}
.red{
    color: #FE0201;
}
.contDiv{
    margin-top: 56rpx;
}
.comp{
    display: flex;
    flex-direction: column;
    margin-top: 130rpx;
}
.compt{
  margin-left: 200rpx;width: calc(100% - 200rpx);text-overflow: ellipsis;justify-content: flex-end;line-height: 40rpx;margin-bottom: 10rpx;
}
.nav{
    position: fixed;
    top:0;
    left: 0;
    z-index: 10;
    padding:0 20px;
    display: flex;
    align-items: center;
}
.btns{
  margin: 30rpx 36rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.refuse{
  flex:1;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #1D2129;
  text-align: center;
  line-height: 80rpx;
}
.accept{
  flex:1;
  height: 80rpx;
  background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin-left: 30rpx;
}
.resultPic{
  width: 170rpx;
  height: 170rpx;
  position: absolute;
  bottom: 100rpx;
}