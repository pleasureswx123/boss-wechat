.item{
  margin: 0 52rpx;
  height: 162rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #F5F5F5;
}
.name{
  font-weight: 400;
  font-size: 24rpx;
  color: #999999;
}
.cont{
  font-weight: 400;
  font-size: 32rpx;
  color: #1D2129;
}
.btn{
  width: 640rpx;
  height: 80rpx;
  /* background: linear-gradient( 270deg, #FF7979 0%, #F32E2E 100%), #FFFFFF; */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 16rpx;
  margin: 100rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-weight: 400;
  font-size: 36rpx;
  color: #FFFFFF;
}

.header {
  width: 100%;
  height: 45px;
  padding: 10px 20px 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  font-size: 15px;
  background: #fff;
  position: relative;
}

.header .cancel {
  color: rgb(96, 98, 102);
}

.header .confirm {
  color: #FE0201;
}
.picker-view {
  width: 570rpx;
  height: 500rpx;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.tipFont {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 550;
  color: #1D2129;
  display: flex;
  justify-content: center;
}


.selecetedIndicator {
  height: 36px;
  position: relative;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.selecetedIndicator::after {
  display: none;
}

.selecetedIndicator::before {
  display: none;
}

.columnStyle {
  line-height: 72rpx;
  color: #1D2129;
  font-size: 30rpx;
  background: transparent;
  margin: auto 0;
  /* background: #f5f5f5; */
}

.activeSize {
  font-size: 38rpx;
  /* border-top: 2rpx solid #666666; */
}

.leftPay {
  border-radius: 8rpx 0 0 8rpx;
}

.rightPay {
  border-radius: 0 8rpx 8rpx 0;
}

.pop_box {
  padding: 64rpx 48rpx;
  box-sizing: border-box;
}

.pop_box_title {
  font-size: 44rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #1D2129;
}

.pop_box_discribe {
  font-size: 28rpx;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: #666666;
  margin-bottom: 22rpx;
}
.job_expt_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 30rpx 6rpx;
  box-sizing: border-box;
}

.job_expt_item_left {
  display: flex;
  align-items: center;
}

.job_expt_item_right {
  width: 48rpx;
  height: 34rpx;
}

.job_expt_item_left_title {
  font-size: 28rpx;
  
  font-weight: 400;
  color: #1D2129;
  margin-right: 24rpx;
}

.job_expt_item_left_discribe {
  width: 116rpx;
  height: 46rpx;
  background: #fdeaea;
  border-radius: 4rpx;
  font-size: 22rpx;
  
  font-weight: 400;
  color: #FE0201;
  line-height: 46rpx;
  text-align: center;
}

.selected {
  color: #FE0201 !important;
}

