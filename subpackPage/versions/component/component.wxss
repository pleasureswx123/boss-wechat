page {
  height: 100%;
  overflow: hidden;
  background: #f5f5f5;
}

.componentBox {
  width: 100%;
  height: 100%;
}

.componentBox_head {
  flex-shrink: 0;
}


.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  height: 908rpx;
  background-repeat: no-repeat;
  background-size: cover;
  z-index: 999;
}

.nav-bar .search {
  color: #1D2129;
  position: absolute;
  display: flex;
  align-items: center;
}

.nav-bar .search .tit {
  position: absolute;
  left: calc(50%);
  transform: translateX(-50%);
  font-weight: 600;
  font-size: 36rpx;
  color: #333333;
}

.banner {
  height: 300rpx;
  position: relative;
}

.swiper {
  height: 100%;
}

.swiper image {
  border-radius: 0rpx;
}

.componentBox_top {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  flex-shrink: 0;
}

.top_content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 34rpx;
  box-sizing: border-box;
}

.top_content .top_content-left,
.top_content-content {
  max-width: 200rpx;
  display: flex;
  flex-direction: row;
}

.top_content .contName {
  padding-right: 12rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #1D2129;
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
}

.top_content .top_content-right {
  min-width: 76rpx;
  padding-right: 10rpx;
  padding-left: 5rpx;
  height: 40rpx;
  /* background: rgba(153, 153, 153, 0.2); */
  border-radius: 4rpx;
  font-size: 20rpx;

  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  letter-spacing: 1px;
  text-align: center;
  position: relative;

  padding-right: 12rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #1D2129;
}

