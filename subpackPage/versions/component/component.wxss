.componentBox_content {
  padding: 0 28rpx;
  position: relative;
  flex: 1;
  overflow: auto;
}

.list-container {
  height: 100%;
}

.custom-pull-down {
  width: 100%;
  text-align: center;
}

.custom-pull-down image {
  width: 40rpx;
  height: 40rpx;
  line-height: 60px;
}

.custom-loader {
  width: 100%;
  text-align: center;
  line-height: 60px;
  font-size: 24rpx;
  color: #999;
}

.no_data_center {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_data_img {
  width: 402rpx;
  height: 214rpx;
}

.no_data_text {
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 8rpx;
}