/* subpackPage/versions/postHot/postHot.wxss */
page {
    height: 100%;
    overflow: hidden;
    background: #f5f5f5;
}

.postHotBox {
    width: 100%;
    height: 100%;
    background-image: url('https://imgcdn.guochuanyoupin.com/resource/wechat/baseimages/versions/postHotBack.png');
    background-repeat: no-repeat;
    background-size: 100%;
}

/* 自定义导航栏 */
.backIcon {
    background-size: cover;
    background-position: center -100%;
    width: 100vw;
    display: flex;
    position: fixed;
    top: 0;
    z-index: 999;
    align-items: center;
    padding-top: 20px;
    height: 40px;
}

.van-nav-bar__left {
    padding-left: 4px;
    align-items: center;
    display: flex;
    position: absolute;
}

.van-nav-bar__title {
    margin: 0 auto;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 50rpx;
}
/* 占位 */
.NavberPerch{
    padding-bottom: 50rpx;
    position: relative;
    
}
.NavberPerch image{
   width: 250rpx;
   height: 240rpx;
   position: absolute;
   right: 0;
   z-index: 10;
}

.postHotBox_content {
    width: 100%;
    /* background: #FFF9F9; */
    padding: 0 40rpx;
    box-sizing: border-box;
}

.content-box {
    height: 100%;
    width: 100%;
}


.content-box .box_title {
    width: 100%;
    text-align: center;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 0 44rpx;
}

.content-box .box_title text {
    display: inline-block;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #999999;
}

.content-box .box_title .text {
    margin: 0 20rpx 0 20rpx;
}

.content-box .box_title .line1 {
    width: 24rpx;
    height: 4rpx;
    opacity: 0.2;
    background: #999999;
    margin-top: 6rpx;
}

.box_hotList {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 9;
    /* overflow: auto; */
}
.box_hotList image{
    width: 124rpx;
    height: 152rpx;
    position: absolute;
    left: -60rpx;
    bottom: 58rpx;
    z-index: 5;
}

.box_hotList-item {
    /* width: 264rpx; */
    height: 95rpx;
    background: #FFFFFF;
    border-radius: 12rpx;
    margin-bottom: 24rpx;
    line-height: 65rpx;
}

.box_hotList-item:nth-child(2n) {
    
}

.box_hotList-item {
  /* margin-left: 86rpx; */
  margin-right: 26rpx;
}

.item_content {
    padding:0 24rpx;
    box-sizing: border-box;
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.item_content .hotTitle {
    position: relative;
    padding-top: 12rpx;
}

.item_content .hotTitle text {
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 550;
    color: #1D2129;
    position: relative;
    z-index: 99;
    display: inline-block;
}

.item_content .postNum {
    font-size: 22rpx;
    
    font-weight: 400;
    color: #999999;
}

.item_content .background_color {
    position: absolute;
    width: 88rpx;
    height: 22rpx;
    background: linear-gradient(270deg, #FFFDFD 0%, #FFDFDD 100%);
    left: 0;
    bottom: 0;
}


/* 以下为灵活用户样式 */

.content-box .box_title .hotIndustryList {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    padding-left: 20rpx;
}

.content-box .box_title .hotIndustryItem {
    flex-shrink: 0;
    margin-right: 40rpx;
    height: 60rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 40rpx;
}

.content-box .box_title .active {
    font-weight: 600;
    font-size: 30rpx;
    position: relative;
}
.content-box .box_title image{
  display: none;
}
.content-box .box_title .active image{
  width: 54rpx;
  height: 14rpx;
  position:absolute;
  display: inline-block;
  bottom: 0px;
  left:50%;
  margin-left: -27rpx;
}