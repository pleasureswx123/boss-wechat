page {
  height: 100%;
  width: 100%;
}

.indexAI {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  height: 908rpx;
  background-repeat: no-repeat;
  background-size: cover;
}

.nav-bar .search {
  color: #1D2129;
  position: absolute;
  display: flex;
  align-items: center;
}

.nav-bar_title {
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-family: PingFangSC, PingFang SC;
  font-weight: 600;
  font-size: 36rpx;
  color: #1D2129;
}

.indexAI-content {
  flex: 1;
  padding: 0 48rpx;
}

.indexAI-content .content_title {
  margin-top: 96rpx;
  width: 100%;
  /* height: 232rpx; */
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.indexAI-content .content_title-top {
  height: 94rpx;
  display: flex;
  /* width: calc(100% - 40rpx); */
  position: relative;
}

.line {
  width: 172rpx;
  height: 6rpx;
  background: linear-gradient(270deg, rgba(255, 255, 255, 0.16) 0%, #FFFFFF 29%, #FFFFFF 38%, rgba(216, 216, 216, 0.4) 100%);
  position: absolute;
  top: calc(166rpx - 72rpx);
  left: 0rpx;
}

.kefuxiaoyou {
  position: absolute;
  width: 104rpx;
  bottom: 0;
  left: calc(136rpx + 42rpx);
  font-family: PingFangSC, PingFang SC;
  font-weight: 600;
  font-size: 52rpx;
  color: #1D2129;
  background: linear-gradient(90deg, #FFFFFF 0%, #FFBABA 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.indexAI-content .content_title-user {
  width: 136rpx;
  height: 166rpx;
  /* position: relative; */
  position: absolute;
  top: -72rpx;
  left: 0rpx;
}

.indexAI-content .content_title-text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #FFFFFF;
  padding: 26rpx 0;
}

.content_textarea {
  position: relative;
  width: 100%;
  height: 684rpx;
  border-radius: 20rpx;
  border: 1rpx solid #FE0201;
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 10px;
  font-size: 30rpx;
}

.content_textarea textarea {
  width: 100%;
  height: calc(100% - 40rpx);
}

.content_textarea .num {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  font-style: normal;
  /* height: 60rpx;
  padding: 0 20rpx; */
  z-index: 900;
}

.indexAI-footer {
  height: 178rpx;
  /* background: #FFFFFF; */
  /* box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08); */
  padding: 0 48rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.indexAI_checkbox {
  padding: 0 48rpx;
}

.label-class {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #1D2129;
  line-height: 34rpx;
  text-align: left;
  font-style: normal;
}

.optimize {
  flex: 1;
}

.save {
  width: 220rpx;
  background: linear-gradient(270deg, #FF9D72 0%, #FF6400 100%) !important;
}

.button {
  height: 92rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  text-align: center;
  line-height: 92rpx;
  margin-top: 22rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #FFFFFF;
}

.button text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.PutAsh {
  opacity: 0.5;
}

.contAI {
  width: 100%;
  height: 100%;
  overflow: auto;
}

/* 余额不足弹窗 */
.balancePopup {
  width: 750rpx;
  height: 500rpx;
  background-color: #fff;

}

/* 询问弹窗 */
.circulate_popup {
  /* height: 390rpx; */
  box-sizing: border-box;
  position: relative;
  width: 100%;
  overflow: hidden;
}

.circulate_popup-head {
  /* height: 238rpx; */
  position: relative;
  background: url(https://imgcdn.guochuanyoupin.com/resource/wechat/baseimages/versions/circulateBack.png);
  background-repeat: no-repeat;
  background-position: 0 -10rpx;
  /* background-size: cover; */
  background-size: 100% 100%;
  padding: 0 48rpx 20rpx;
  box-sizing: border-box;
}

.circulate_popup-head .title {
  height: 60rpx;
  font-family: AlibabaPuHuiTi_2_95_ExtraBold;
  font-size: 44rpx;
  color: #1D2129;
  line-height: 60rpx;
  text-align: left;
  font-style: normal;
  padding-top: 54rpx;
  font-weight: bold;
}

.circulate_popup-head .imgBox {
  position: absolute;
  right: 50rpx;
  top: 30rpx;
  width: 194rpx;
  height: 186rpx;
}

.circulate_popup-content {
  /* position: absolute;
  top: 150rpx;
  left: 0; */
  width: 100%;
  padding: 20rpx 48rpx;
  box-sizing: border-box;
}


.circulate_popup-content .back {
  width: 100%;
  height: 100rpx;
  /* background: url(https://imgcdn.guochuanyoupin.com/resource/wechat/baseimages/versions/circulateMask.png); */
  /* background-repeat: no-repeat; */
  /* background-size: cover; */
  /* background-size: 100% 100%; */
  backdrop-filter: blur(2px);
  /* box-shadow: 0 0 10px #fff; */
  background: rgba(255, 220, 220, 0.3);
  border-radius: 24rpx;
}

.circulate_popup-content .back .text {
  height: 100%;
  padding: 0rpx 42rpx 0 40rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #1D2129;
  text-align: left;
  font-style: normal;
  display: flex;
  align-items: center;
}

.circulate_popup-button {
  display: flex;
  justify-content: space-between;
  padding: 0 48rpx 48rpx;
  box-sizing: border-box;
  width: 100%;
}

.circulate_popup-button .cancalButton {
  width: 180rpx;
  background: #F1F1F1;
  font-weight: 400;
  font-size: 36rpx;
  color: #666666;
  margin-right: 20rpx;
}

.circulate_popup-button .confirmButton {
  width: 452rpx;
  background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
  font-weight: 500;
  color: #FFFFFF;
}

.circulate_popup-button .button {
  border-radius: 12rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  font-style: normal;
  font-family: PingFangSC, PingFang SC;
}

.AILoading {
  height: 100%;
  width: 100%;
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  top: 0;
  z-index: 1001;
  animation: fade 10s linear infinite;
}
@keyframes fade {
  0% {
    scale: 1;
  }
  50% {
    scale: 1.1;
  }
  100% {
    scale: 1;
  }
}

.AILoadingView {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}