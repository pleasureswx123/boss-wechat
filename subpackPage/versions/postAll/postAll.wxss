page {
  height: 100%;
  overflow: hidden;
  background: #f5f5f5;
}

.postAllBox {
  width: 100%;
  height: 100%;
}

.searchTop {
  padding: 20rpx 32rpx;
  background: #ffffff;
}

.searchInput {
  height: 68rpx;
  background: #F5F5F5;
  border-radius: 38rpx;
  border: 1rpx solid;
  border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
}

.searchInput image {
  padding-right: 4px;
  width: 28rpx;
  height: 28rn
}

.input {
  /* display: flex; */
  align-items: center;
  justify-content: space-between;
  flex: 1;
}


scroll-view ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.van-search {
  padding: 0px;
}

.input-class {
  height: 100%;
  flex: 1;
  margin-left: 4rpx;
}

.tabBox {
  display: flex;
  justify-content: space-between;
  margin-top: 2rpx;
  align-items: center;
  padding: 22rpx 22rpx 0;

}

.tabNav {
  display: flex;
  align-items: center;
  max-width: 33%;
}

.tabNav .tabNav_icon {
  height: 100%;
}

.tabNav .span {
  padding-right: 12rpx;
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #1D2129;
  flex: 1;
  /* overflow: hidden; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.searchNo {
  color: #1D2129 !important;
}

.screen {
  padding: 0 10rpx;
  min-width: 76rpx;
  height: 40rpx;
  background: rgba(153, 153, 153, 0.2);
  border-radius: 4rpx;
  text-align: center;
  line-height: 40rpx;
  letter-spacing: 1px;
  font-size: 20rpx;
  max-width: 33%;
  font-weight: 400;
  position: relative;
}

.screen text {
  color: #666666;
}

.screen::before {
  width: 0;
  height: 0;
  position: absolute;
  top: 70%;
  left: 88%;
  transform: translateX(-50%) translateY(-50%);
  border-color: transparent #999 #999 transparent;
  /*上下颜色 左右颜色*/
  border-width: 4rpx 4rpx 4rpx 4rpx;
  border-style: solid;
  content: "";
}

.postAllBox_content {
  background-color: #f5f5f5;
  padding: 0 34rpx;
}

.list-container {
  height: 100%;
}

.custom-pull-down {
  width: 100%;
  text-align: center;
}

.custom-pull-down image {
  width: 40rpx;
  height: 40rpx;
  line-height: 60px;
}

.custom-loader {
  width: 100%;
  text-align: center;
  line-height: 60px;
  font-size: 24rpx;
  color: #999;
}

.custom-loader-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  width: 100%;
  line-height: 60px;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.custom-loader-loading image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}