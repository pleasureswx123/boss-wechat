page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.workExperbox {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.workExperbox_content {
  flex: 1;
  overflow: auto;
}

.workExperbox_footer {
  height: 180rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
}

.in_box {
  padding: 0 48rpx;
  box-sizing: border-box;
}

.item {
  padding: 44rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.items {
  padding: 44rpx 0;
  box-sizing: border-box;
}

.item_left_top {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 300;
  color: #1D2129;
  margin-bottom: 8rpx;

}

.contnew {
  width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topBefore {
  position: relative;
  margin-left: 12rpx;
}

.topBefore::before {
  position: absolute;
  top: 0;
  left: -14rpx;
  content: "*";
  color: #F32E2E;
  width: 8rpx;
  height: 8rpx;
}

.item_left_bot {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #666666;
}

.time_box {
  display: flex;
  align-items: center;
}

.time_left {
  width: 280rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #666;
}

.time_middle {
  margin-right: 32rpx;
}

.bot_swich {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44rpx 0 60rpx 0;
  font-size: 32rpx;

  font-weight: 400;
  color: #1D2129;
}

.more_btn {
  /* width: 678rpx; */
  display: flex;
  justify-content: space-between;
  margin-top: 36rpx;
  /* position: fixed;
    bottom: 60rpx;
    left: 36rpx; */
}

.left_btn {
  width: 180rpx;
  height: 80rpx;
  background: #F1F1F1;
  border-radius: 12rpx;
  font-size: 36rpx;

  font-weight: 400;
  color: #666666;
  line-height: 80rpx;
  text-align: center;
  margin-right: 20rpx;
}

.right_btn {
  flex: 1;
  /* width: 456rpx; */
  height: 80rpx;
  background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
  border-radius: 12rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;

  font-weight: 400;
  color: #FFFFFF;
}

.tipColor {
  color: #999999;

  font-weight: 400 !important;
}

.box {
  background: #ffffff;
}

.submitbtn {
  bottom: 70rpx;
  width: 654rpx;
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin: 30rpx auto;
}

.custom-class{
  display: flex;
  align-items: center;
}

.node-class{
  width: 0.7em !important;
  height: 0.7em !important;
  top: 50% !important;
  left: 10rpx !important;
  transform: translateY(-50%);
}

.van-switch--on .van-switch__node {
  transform: translateY(-50%) translateX(calc(var(--switch-width, 2em) - var(--switch-node-size, 1em))) !important;
}