page{
    height: 100%;
    overflow: hidden;
}
.box {
    background-color: #fff;
}
.top_input {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 670rpx;
    height: 68rpx;
    line-height: 68rpx;
    background: #F5F5F5;
    border-radius: 38rpx;
    border: 1rpx solid;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
    margin-bottom: 20rpx;
}
.top_input input {
    width: 670rpx;
    height: 68rpx;
    line-height: 68rpx;
    padding-left: 64rpx;
    box-sizing: border-box;
}
.icons {
    position: absolute;
    left: 28rpx;
    top: 50%;
    transform: translateY(-50%);
}
.all_line {
    width: 750rpx;
    height: 1rpx;
    background-color: #ededed;
    transform: scaleY(0.3);
    transform-origin: 50% 100%; /*为了防止线模糊*/
}
.middle_line {
    width: 1rpx;
    height: calc(100vh - 150px);
    background-color: #979797;
    transform: scaleX(0.1);
    transform-origin: 50% 100%; /*为了防止线模糊*/
}
.bot_box {
    display: flex;
    align-items: center;
    position: relative;
}
.left_scroll {
    width: 280rpx;
}
.list_item {
    padding-left: 48rpx;
    margin-top: 50rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.list_item .numBox{
    width: 30rpx;
    height: 30rpx;
    background-color: #FE0201;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    line-height: 30rpx;
    font-size: 24rpx;
    margin-right: 20rpx;
}
.selected {
    color: #FE0201 !important;
}
.xqName{
    color: #1D2129;
    font-size: 40rpx;
    height: 106rpx;
    display: flex;
    align-items: center;
}
.right_scroll{
    flex: 1;
    padding: 68rpx 0 28rpx 28rpx;
}
.sitemBox{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.sitem{
    width: 100%;
    height: 63rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    margin-bottom: 28rpx;
    margin-right: 30rpx;
    font-size: 22rpx;
    color: #1D2129;
    align-items: center;
    justify-content: center;
    display: flex;
}
.bot_btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    min-height: 200rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0,0,0,0.08);
    z-index: 2;
}
.zsdjName{
  margin:25px 25px 15px;
  font-size: 44rpx;
  font-weight: 500;
  color: #1D2129;
  line-height: 60rpx;
}
.zsdjCont{
  margin:10px 25px 40px;
  max-height: 70%;
  overflow: auto;
}
.zsdjCont .sitemBox{
  display: inline-block;
  margin-right: 15px;
}
.btnR{
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  bottom: 120px;
}
.closeIcon {
  position: absolute;
  right: 40rpx;
  top: 42rpx;
}

.closeIcon image {
  width: 34rpx;
  height: 34rpx;
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top:0;
  left:0;
  z-index: 0;
}
.selBtn{
    display: flex;
    padding:36rpx 36rpx 0 36rpx;
    color:#1D2129;
    font-size: 28rpx;
    align-items: center;
    flex-wrap: wrap;
}
.selBtnview{
    height: 42rpx;
    line-height: 42rpx;
    background: rgba(255,232,232,1);
    border-radius: 40rpx;
    padding:0 20rpx;
    color: #FE0201;
    margin-left: 20rpx;
    /* display: flex; */
    display: inline-block;
    align-items: center;
    margin-bottom: 20rpx;
    font-size: 24rpx;
}
.btnsBox{
    display: flex;
    flex-direction: row;
    padding:0 20px;
    margin-bottom: 30rpx;
}
.btns {
    height: 80rpx;
    flex: 1;
    margin-bottom: 20rpx;
    /* background: #CFCFCF linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 16rpx;
    font-size: 30rpx;
    color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}
.qcbtn{
    width: 180rpx;
    height: 80rpx;
    background: #F1F1F1;
    border-radius: 12rpx;
    color: #666666;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}
.hy_close{
    width: 20rpx;
    height: 20rpx;
    margin-left: 10px;
}

.placeholderClass{
  font-size: 30rpx;
}