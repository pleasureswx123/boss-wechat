page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.recordStageDetailBox {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.recordStageDetailBox-card {
  flex: 1;
  overflow: scroll;
  padding: 0 48rpx;
}

.cardScrollView {
  height: 100%;
}

.cardScrollView .detailCard {
  margin-top: 60rpx;
  /* height: 794rpx; */
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(255, 207, 207, 0.5);
  border-radius: 32rpx;
  position: relative;
  padding: 0 48rpx;
}

.cardScrollView .detailCard .detailCard_top {
  padding: 64rpx 0 88rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.detailCard_top .detailCard_top-title {
  display: flex;
  align-items: center;
}

.detailCard_top .detailCard_top-title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.detailCard_top .detailCard_top-title text {
  font-weight: 400;
  font-size: 26rpx;
  color: #666666;
}

.detailCard_top .detailCard_top-money {
  font-weight: bold;
  font-size: 68rpx;
  color: #333333;
}

.detailCard_top .detailCard_top-balance {
  font-weight: 400;
  font-size: 24rpx;
  color: #999999;
}

.detailCard_form {
  position: relative;
  z-index: 12;
  padding-bottom: 120rpx;
}

.detailCard_form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 48rpx;
}

.detailCard_form-item .item_label {
  font-weight: 400;
  font-size: 28rpx;
  color: #999999;
}

.detailCard_form-item .item_text {
  font-weight: 400;
  font-size: 28rpx;
  color: #1D2129;
  flex: 1;
  text-align: right;
}

.detailCardButton{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 278rpx;
  z-index: 10;
}