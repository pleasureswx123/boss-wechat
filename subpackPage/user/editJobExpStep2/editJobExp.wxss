.addJobBox {
  overflow: hidden;
  background: #ffffff;
  width: 100%;
  height: 100%;
}

page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.headbg{
width: 100%;
height: 128rpx;
}
.selectedBtn{
  margin: 0 96rpx;
  height: 80rpx;
  background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 44rpx;
  font-weight: 500;
  font-size: 28rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.add_job_box{
  margin: 0 98rpx;
}
.itemBox{
  margin-bottom: 60rpx;
}
.itemName{
  font-weight: 600;
  font-size: 36rpx;
  color: #1D2129;
}
.itemCont{
  min-height: 80rpx;
  background: #F7F7F7;
  border-radius: 16rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding:10rpx 20rpx 10rpx 38rpx;
}
.qzStatus{
  display: flex;
  flex-wrap: wrap;
}
.qzItem{
  min-width: 255rpx;
  height: 90rpx;
  background: #F7F7F7;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  font-size: 28rpx;
  color: #1D2129;
  margin-top: 24rpx;
  margin-right: 38rpx;
}

.qzItem:nth-child(2),.qzItem:nth-child(4){
  margin-right: 0rpx !important;
}
.pageBox{
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.scrollView{
  height: calc(100vh - 340rpx);
}
.selectedType{
  background: #FFF3F3;
border-radius: 16rpx;
border: 2rpx solid #FE0201;
color: #FE0201;
font-size: 28rpx;
}

.selecetedIndicator {
  height: 50px;
  position: relative;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  border-radius: 16rpx;
}
.selecetedIndicatorBox{
  position: relative;height: 300rpx;background: #F7F7F7;
}

.selecetedIndicator::after {
  display: none;
}

.selecetedIndicator::before {
  display: none;
}

.columnStyle {
  line-height: 52px;
  color: #666666;
  font-weight: 500;
  font-size: 32rpx;
  margin: auto 0;
  background: #F7F7F7;
}
.picker-view {
  width: 570rpx;
  height: 300rpx;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.activeSize{
  font-size: 32rpx;
  color: #1D2129;
  font-weight: 500;
  /* border-top: 2rpx solid #666666; */
}

.leftPay {
  border-radius: 8rpx 0 0 8rpx;
}

.rightPay {
  border-radius: 0 8rpx 8rpx 0;
}

.middle {
  background: #f5f5f5;
  height: 100rpx;
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 99;
}
