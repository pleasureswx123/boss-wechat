/* subpackPage/user/wantedDetail/wantedDetail.wxss */
page {
  height: 100%;
  height: 100%;
  overflow: hidden;
}

.wantedDetail-wrapper {
  height: 100%;
  background-color: #ffffff;
  /* padding: 0 48rpx;
  box-sizing: border-box; */
}

.wantedDetail-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.wantedDetail-container_top {
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.4);
}

.content_top-month {
  display: flex;
  align-items: center;
  padding: 20rpx 48rpx 0;
  height: 110rpx;
  position: relative;
  z-index: 10;
}

.content_top-month .month_num {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #333333;
}

.content_top-month .month_num text {
  font-weight: 500;
  font-size: 32rpx;
  color: #333333;
}

.recordStageContent_img {
  position: absolute;
  right: 0;
  top: 14rpx;
  width: 266rpx;
  height: 162rpx;
  z-index: 9;
}

.content_top-month .month_icon image {
  width: 18rpx;
  height: 12rpx;
  margin-left: 10rpx;
  line-height: 84rpx;
}


.wantedDetail-container_buttom {
  flex: 1;
  overflow-y: scroll;
}

.wantedDetail-list-wrapper {
  padding: 0 48rpx;
  box-sizing: border-box;
}

.wantedDetail-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 38rpx 0;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.4);
}

.wantedDetail-item .item-content,
.wantedDetail-item .item-right {
  display: flex;
  flex-direction: column;
}

.item-left {
  display: flex;
  align-items: center;
  margin-right: 14rpx;
}

.item-left image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 100%;
}

.item-content {
  flex: 1;
  padding: 0 14rpx;
  box-sizing: border-box;
}

.item-content .item-content-top {
  font-weight: 500;
  font-size: 28rpx;
  color: #1D2129;
  display: flex;
  align-items: center;
  /* vertical-align: middle; */
  /* line-height: 28rpx; */
}

.item-content .item-content-top .title_text {
  font-weight: 500;
  font-size: 28rpx;
  color: #1D2129;
}

.statusText {
  border-radius: 6rpx;
  font-weight: 400;
  font-size: 18rpx;
  padding: 0rpx 5rpx;
  /* text-align: center; */
  margin-left: 18rpx;
  height: 34rpx;
  /* line-height: 34rpx; */
  min-width: 66rpx;
  /* margin-top: 4rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.warning {
  background: #FFEDE4;
  color: #FE5100;
}

.primary {
  background: #E3FFE6;
  color: #56C939;
}

.danger {
  background: #E5E5E5;
  color: #999999;
}

.item-content-buttom {
  font-weight: 400;
  font-size: 24rpx;
  color: #666666;
}

.item-right-topTime {
  font-weight: 500;
  font-size: 24rpx;
  color: #999999;
}

.item-right-buttomMoney {
  font-weight: normal;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
}

.no_data_center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_data_img {
  width: 402rpx;
  height: 214rpx;
}

.no_data_text {
  font-size: 26rpx;

  font-weight: 400;
  color: #666666;
  /* margin-bottom: 160rpx; */
  margin-top: 8rpx;
}


.monthPopup {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.monthPopup-head {
  /* height: 136rpx; */
}

.monthPopup-head_back {
  position: absolute;
  top: 0;
  left: 0;
  height: 278rpx;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.monthPopup-head_title {
  height: 136rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #F3F0F0;
  position: relative;
  z-index: 10;
  padding: 0 60rpx;
}

.monthPopup-head_title image {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 18px;
  right: 18px;
}

.monthPopup-head_title .title-item {
  font-weight: 500;
  font-size: 36rpx;
  color: #9F9F9F;
  text-align: center;
  width: 100%;
}

.monthPopup-head_customTime {
  position: relative;
  z-index: 10;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  /* height: 140rpx; */
  padding-top: 40rpx;
}

.monthPopup-head_customTime .customTime-item {
  /* padding: 0rpx 40rpx 12rpx; */
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #979797;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #1D2129;
  width: 240rpx;
  text-align: center;
}

.monthPopup-head_customTime .customTimeActive {
  border-bottom: 2rpx solid #FE0201;
  color: #FE0201;
}

.monthPopupTitleActive {
  color: #FE0201 !important;
}

.monthPopup-content {
  /* flex: 1; */
  /* height: 156px; */
  height: 208px;
  position: relative;
  z-index: 12;
  padding-bottom: 30rpx;
}

.monthPopup-footer {
  display: flex;
  /* align-items: center; */
  padding: 0 48rpx;
  position: relative;
  z-index: 12;
  height: 170rpx;
}

.monthPopup-footer .button {
  height: 80rpx;
  border-radius: 12rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  margin-top: 30rpx;
}

.cancelButton {
  width: 180rpx;
  background: #F1F1F1;
  margin-right: 22rpx;
  font-weight: 400;

  color: #666666;
}

.confirmButton {
  flex: 1;
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  font-weight: 500;
  color: #FFFFFF;
}

.picker-view {
  width: 100%;
  height: 100%;
  text-align: center;
}

.columnStyle {
  line-height: 52px;
  color: #1D2129;
  background: transparent;
  margin: auto 0;
  font-weight: 500;
  font-size: 32rpx;
}

.selecetedIndicator {
  height: 50px;
  position: relative;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  /* background: #F6F6F6; */
  z-index: 10;
}

.selecetedIndicator::after {
  display: none;
}

.selecetedIndicator::before {
  display: none;
}