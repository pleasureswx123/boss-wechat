page{
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.positionTypeBox{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.positionTypeBox_content{
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: auto;
}

.content-top{
  padding: 0 96rpx;
  box-sizing: border-box;
}

.content-buttom{
  flex: 1;
  overflow: hidden;
}

.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  /* height: 908rpx; */
  height: 256rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.nav-bar .search {
  color: #1D2129;
  position: absolute;
  display: flex;
  align-items: center;
}




.box {
  background-color: #fff;
  position: relative;
  z-index: 2;
}
.top_input {
  position: relative;
  /* left: 50%;
  transform: translateX(-50%);
  width: 558rpx; */
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #CCCCCC;
  /* border: 1rpx solid; */
  /* border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
  backdrop-filter: blur(8px); */
  margin-bottom: 42rpx;
  margin-top: 60rpx;
}
.top_input input {
  width: 558rpx;
  height: 96rpx;
  line-height: 68rpx;
  padding-left: 64rpx;
  box-sizing: border-box;
}
.icons {
  position: absolute;
  left: 28rpx;
  top: 50%;
  transform: translateY(-50%);
}
.all_line {
  width: 750rpx;
  height: 1rpx;
  background-color: #979797;
  transform: scaleY(0.3);
  transform-origin: 50% 100%; /*为了防止线模糊*/
}
.middle_line {
  width: 1rpx;
  /* height: calc(100vh - 588rpx); */
  height: 100%;
  background-color: #979797;
  transform: scaleX(0.1);
  transform-origin: 50% 100%; /*为了防止线模糊*/
}
.bot_box {
  display: flex;
  align-items: center;
  border-top: 2rpx solid rgba(151, 151, 151, 0.2);
  overflow: scroll;
}
.left_scroll {
