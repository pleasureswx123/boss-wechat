.rechargeScrollBox-item {
  flex: 1;
  height: 120rpx;
  text-align: center;
  margin: 0 20px 20px 0;
  border: 1px solid #dedede;
  border-radius: 4rpx;
  box-sizing: border-box;
  width: calc((100% - 40px) / 3);
  min-width: calc((100% - 40px) / 3);
  max-width: calc((100% - 40px) / 3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 10;
  border-radius: 8rpx;

}



.rechargeScrollBox-item.selItem .item-content::after {
  display: inline-block;
  position: absolute;
  left: -30%;
  top: 40px;
  transform: translateY(100%);
  content: '';
  position: absolute;
  height: 140px;
  width: 140px;
  border-radius: 48% 40% 48% 40%;
  background-color: #FFE3E3;
  /* background-color: #3a7977; */
  animation:
    wave-color 17s linear infinite alternate both,
    wave-rotate 13s linear infinite;
  z-index: 1;
}

.rechargeScrollBox-item.selItem .item-content::before {
  display: inline-block;
  left: -40%;
  top: 40px;
  transform: translateY(100%);
  content: '';
  display: inline-block;
  position: absolute;
  height: 100px;
  width: 100px;
  border-radius: 35% 48% 35% 48%;
  animation:
    wave-color 13s linear infinite alternate both,
    wave-rotate 17s linear infinite;
  background-color: #FFDADA;
  z-index: 1;
  /* background-color: #3a7977; */
}

.rechargeScrollBox-item .item-content {
  position: relative;
  z-index: 8;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  overflow: hidden;
  border-radius: 8rpx;
}

.rechargeScrollBox-item .item-content .price {
  font-family: "OPPOSans B";
  font-weight: normal;
  /* font-size: 34rpx; */
  color: #1D2129;
