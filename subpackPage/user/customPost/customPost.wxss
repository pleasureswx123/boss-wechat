.headbg{
  width: 100vw;
  height: 100vh;
  position: absolute;
  top:0;
  left: 0;
  z-index: 1;
}
.contentBox{
  position: relative;
  z-index: 2;
}
.headBox{
  height: 302rpx;
  padding:108rpx 26rpx 0 60rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.customPost{
  width: 264rpx;
  height: 174rpx;
  position:absolute;
  right: 26rpx;
}
.title{
  font-weight: 600;
  font-size: 60rpx;
  color: #1D2129;
}
.desp{
  font-weight: 400;
  font-size: 30rpx;
  color: #333333;
}
.cont{
  height: calc(100vh - 372rpx);
  background: #fff;
  border-radius: 48rpx;
  padding:66rpx;
  position: relative;
  z-index: 3;
}
.name1{
  font-weight: 600;
  font-size: 42rpx;
  color: #1D2129;
}
.labelBox{
  display: flex;
  flex-wrap: wrap;
}
.label{
  min-width: 256rpx;
  height: 90rpx;
  background: #F7F7F7;
  border-radius: 16rpx;
  margin-top: 24rpx;
  margin-right:36rpx ;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  font-size: 28rpx;
  color: #1D2129;
  border:2rpx solid #f7f7f7;
}
.btnsBox{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: 100;
}
.btns{
  width: 558rpx;
  height: 80rpx;
  background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 40rpx;
  margin: 0 auto;
  font-weight: 500;
  font-size: 36rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 自定义导航栏 */
.backIcon {
  background-size: cover;
  background-position: center -100%;
  width: 100vw;
  display: flex;
  position: fixed;
  top: 0;
  z-index: 999;
  align-items: center;
  padding-top: 20px;
  height: 40px;
}
.van-nav-bar__left {
  padding-left: 4px;
  align-items: center;
  display: flex;
  font-size: 14px;
  position: fixed;
  top: 0
}
.active{
  background: #FFF3F3;
  border-radius: 16rpx;
  border: 2rpx solid #FE0201;
  font-weight: 500;
  font-size: 32rpx;
  color: #FE0201;
}