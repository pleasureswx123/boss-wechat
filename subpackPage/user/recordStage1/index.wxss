page {
  height: 100%;
  height: 100%;
  overflow: hidden;
}

.recordStageBox {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.recordStageBox-head {
  /* height: 332rpx; */
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.head_top {
  padding: 48rpx 48rpx 0rpx;
}

.head_top .head_top-title {
  /* font-family: PingFangSC, PingFang SC; */
  font-weight: 500;
  font-size: 28rpx;
  color: #FFFFFF;
}

.head_top .head_top-num {
  font-weight: bold;
  font-size: 60rpx;
  color: #FFFFFF;
  padding-bottom: 34rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.4);
}

.head_button {
  padding: 28rpx 48rpx;
  display: flex;
  align-items: center;
  /* justify-content: center; */
}

.head_button-item {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.head_button-item .title {
  font-weight: 500;
  font-size: 24rpx;
  color: #FFFFFF;
}

.head_button-item .num {
  font-weight: bold;
  font-size: 36rpx;
  color: #FFFFFF;
}

.consume {
  margin-left: 116rpx;
}

.recordStageBox-content {
  flex: 1;
  /* overflow: auto; */
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  overflow: hidden;
  border-radius: 24rpx;
}

.recordStageBox-content .content_top {
  /* height: 186rpx; */
  padding: 0 44rpx;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.4);
  position: relative;
}

.content_top .content_top-month {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  height: 96rpx;
  position: relative;
  z-index: 10;
}

.recordStageContent_img {
  position: absolute;
  right: 0;
  top: 14rpx;
  width: 266rpx;
  height: 162rpx;
  z-index: 9;
}

.content_top .content_top-month .month_num {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 60rpx;
  color: #333333;
}

.content_top .content_top-month .month_num  text {
  font-weight: 500;
  font-size: 32rpx;
  color: #333333;
}

.year_month_day{
  font-size: 40rpx !important;
}

.year_month_day text{
  font-size: 24rpx !important;
}

.content_top .content_top-month .month_icon {
  /* height: 100%; */
}

.content_top .content_top-month .month_icon image {
  width: 18rpx;
  height: 12rpx;
  margin-left: 10rpx;
  line-height: 84rpx;
}

.content_top .content_top-tags {
  display: flex;
  align-items: center;
  margin: 10rpx 0 22rpx;
}

.content_top .content_top-tags .tags-item {
  padding: 2rpx 16rpx;
  border-radius: 34rpx;
  border: 1rpx solid #D2D2D2;
  font-weight: 500;
  font-size: 22rpx;
  color: #666666;
  margin-right: 32rpx;
}

.content_top .content_top-tags .active {
  border: 1rpx solid #FE0201;
  color: #FE0201;
}

.recordStageBox-content .content_main {
  flex: 1;
  overflow: scroll;
  position: relative;
}

.contentScrollView {
  height: 100%;
}

.contentScrollView-list {
  height: 100%;
  padding: 0 44rpx;
  box-sizing: border-box;

}

.contentScrollView-item {
  /* height: 154rpx; */
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.4);
}

.contentScrollView-item:last-child {
  border: none;
}

.contentScrollView-item .item_left {
  height: 100%;
  display: flex;
  align-items: center;
}

.contentScrollView-item .item_left image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}

.contentScrollView-item .item_right {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.contentScrollView-item .item_right .item_right-top {
  display: flex;
  justify-content: space-between;
}

.item_right-top .left {
  font-weight: 500;
  font-size: 28rpx;
  color: #333333;
}

.item_right-top .right {
  font-weight: 500;
  font-size: 24rpx;
  color: #999999;
}

.contentScrollView-item .item_right .item_right-button {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4rpx;
}

.item_right-button .left {
  font-weight: 500;
  font-size: 24rpx;
  color: #999999;
}

.item_right-button .right {
  font-weight: bold;
  font-size: 28rpx;
  color: #333333;
}

.recordStageBox-footer {
  height: 136rpx;
}


.monthPopup {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.monthPopup-head {
  /* height: 136rpx; */
}

.monthPopup-head_back {
  position: absolute;
  top: 0;
  left: 0;
  height: 278rpx;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.monthPopup-head_title {
  height: 136rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #F3F0F0;
  position: relative;
  z-index: 10;
  padding: 0 60rpx;
}

.monthPopup-head_title image{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 18px;
  right: 18px;
}

.monthPopup-head_title .title-item {
  font-weight: 500;
  font-size: 36rpx;
  color: #9F9F9F;
  margin-right: 40rpx;
}

.monthPopup-head_customTime {
  position: relative;
  z-index: 10;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  /* height: 140rpx; */
  padding-top: 40rpx;
}

.monthPopup-head_customTime .customTime-item {
  /* padding: 0rpx 40rpx 12rpx; */
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #979797;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #1D2129;
  width: 240rpx;
  text-align: center;
}

.monthPopup-head_customTime .customTimeActive {
  border-bottom: 2rpx solid #FE0201;
  color: #FE0201;
}

.customTime_content {
  margin: 0 24rpx;
}

.monthPopupTitleActive {
  color: #FE0201 !important;
}

.monthPopup-content {
  /* flex: 1; */
  /* height: 156px; */
  height: 208px;
  position: relative;
  z-index: 12;
  padding-bottom: 30rpx;
}

.picker-view {
  width: 100%;
  height: 100%;
  text-align: center;
  /* position: relative;
  left: 50%;
  transform: translateX(-50%); */
}


.selecetedIndicator {
  height: 50px;
  position: relative;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  /* background: #F6F6F6; */
  z-index: 10;
}

.selecetedIndicator::after {
  display: none;
}

.selecetedIndicator::before {
  display: none;
}


.columnStyle {
  line-height: 52px;
  color: #1D2129;
  background: transparent;
  margin: auto 0;
  /* background: #f5f5f5; */
  font-weight: 500;
  font-size: 32rpx;
}

.leftPay {
  border-radius: 8rpx 0 0 8rpx;
}

.monthPopup-footer {
  display: flex;
  /* align-items: center; */
  padding: 0 48rpx;
  position: relative;
  z-index: 12;
  height: 170rpx;
}

.monthPopup-footer .button {
  height: 80rpx;
  border-radius: 12rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  margin-top: 30rpx;
}

.cancelButton {
  width: 180rpx;
  background: #F1F1F1;
  margin-right: 22rpx;
  font-weight: 400;

  color: #666666;
}

.confirmButton {
  flex: 1;
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  font-weight: 500;
  color: #FFFFFF;
}

.no_data_center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_data_img {
  width: 402rpx;
  height: 214rpx;
}

.no_data_text {
  font-size: 26rpx;
  
  font-weight: 400;
  color: #666666;
  /* margin-bottom: 160rpx; */
  margin-top: 8rpx;
}

.van-icon{
  z-index: 9999;
}