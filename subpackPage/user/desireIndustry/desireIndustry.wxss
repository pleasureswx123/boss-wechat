page{
  overflow: hidden;
}
.title {
    font-size: 48rpx;
    font-weight: 500;
    color: #1D2129;
    letter-spacing: 3px;
}
.stitle{
    font-size: 28rpx;
    color: #666666;
}
.in_box {
    padding: 0 48rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    padding-bottom: 280rpx;
    /* height: calc(100vh - 280rpx); */
}
.item {
    margin-top: 30rpx;
    margin-bottom: 38rpx;
}
.item_top {
    height: 124rpx;
    line-height: 124rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #f5f5f5;
}
.item_top_right{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.itemNum{
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: #FE0201;
    margin-right: 10rpx;
}
