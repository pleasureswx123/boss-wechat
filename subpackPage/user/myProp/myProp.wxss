.top_tabs {
    background-color: #F5F5F5 !important;
    height: 80rpx;
}

.top_tabs .van-tabs__nav {
    background-color: #F5F5F5 !important;
}

.swiper_contet {
    width: 750rpx;
    height: 100%;
    background-color: #F5F5F5 !important;
}

.no_use_box {
    padding: 0 32rpx;
}

.no_use_item {
    position: relative;
    margin-top: 40rpx;
    width: 686rpx;
    height: 280rpx;
}

.img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}

.items {
    display: flex;
    align-items: center;
    margin: 46rpx 38rpx 0 44rpx;
    box-sizing: border-box;
    justify-content: space-between;
    padding-top: 46rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #ededed;
}
.despItems{
  font-size: 20rpx;
  color: #999;
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.items_left {
    flex: 1;
    display: flex;
    align-items: center;
}

.items_left_left {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-right: 50rpx;
}

.items_left_left_bot {
    font-size: 24rpx;
    font-weight: 300;
    color: #FE0201;
}

.items_left_left_top {
    font-size: 60rpx;
    font-weight: 500;
    color: #FE0201;
}

.items_left_right_top {
    font-size: 32rpx;
    font-weight: 500;
    color: #1D2129;
    margin-bottom: 2rpx;
}

.items_left_right_middle {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    margin-bottom: 24rpx;
}

.items_left_right_bottom {
    /* width: 305rpx; */
    padding: 4rpx;
    background: #FEEAEA;
    border-radius: 4rpx;
    font-size: 20rpx;
    font-weight: 300;
    color: #FE0201;
    text-align: center;
}

.right_btns {
    width: 108rpx;
    height: 44rpx;
    background: #D8D8D8 linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
    border-radius: 4rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 44rpx;
    text-align: center;
}
.greyBtns{
  background:#ccc;
}

.already_use {
    opacity: 0.6;
}
.opt{
  position: absolute;
  top:0;
  left:0;
  z-index: 2;
  background: rgba(255, 255, 255, 0.3);
  width: 100%;
  height: 100%;
}