.title {
    font-size: 58rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #1D2129;
    letter-spacing: 3px;
}
.in_box {
    padding: 0 48rpx;
    box-sizing: border-box;
    background-color: #fff;
}
.item {
    margin-top: 30rpx;
    margin-bottom: 38rpx;
}
.item_top {
    display: flex;
    justify-content: space-between;
}
.item_top_left {
    width: 600rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
    letter-spacing: 2px;
}
.item_box {
    padding-bottom: 34rpx;
}
.item_tags {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-left: -16rpx;
}
.tags {
    margin-left: 16rpx;
    margin-top: 22rpx;
    padding: 16rpx 29rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #1D2129;
}
.select_tags{
 background-color: #ffe3e3;   
color: #f76969;
}

.bot_btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    height: 304rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0,0,0,0.08);
    padding-top: 26rpx;
    box-sizing: border-box;
}
.btns {
    margin-top: 44rpx;
    margin-left: 50%;
    transform: translateX(-50%);
    width: 634rpx;
    height: 72rpx;
    background: #CFCFCF linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
    border-radius: 16rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
}
.discribe {
    font-size: 28rpx;
    
    font-weight: 400;
    color: #666666;
}
.top_cont {
    margin-left: 54rpx;
    font-size: 22rpx;
    
    font-weight: 400;
    color: #1D2129;
}
.tags_box_sel {
   padding: 12rpx 48rpx 0 48rpx;
   box-sizing: border-box;
}
.sel_tags {
   margin-left: -20rpx;
   white-space: nowrap;
   overflow-x: scroll;
}
.tags_item {
    margin-left: 20rpx;
    display: inline-block;
    background: rgba(254,117,117,0.2);
    border-radius: 8rpx;
    border: 1rpx solid #F53939;
    padding: 13rpx 138rpx;
    position: relative;
    box-sizing: border-box;
    font-size: 22rpx;
    
    font-weight: 400;
    color: #FE0201;
}
.icons {
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%);
}