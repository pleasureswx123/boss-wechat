}
.box{
    background: #ffffff;
}
.contnew{
  width: 600rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.topBefore {
  position: relative;
  margin-left: 12rpx;
}

.topBefore::before {
  position: absolute;
  top: 0;
  left: -14rpx;
  content: "*";
  color: #F32E2E;
  width: 8rpx;
  height: 8rpx;
}