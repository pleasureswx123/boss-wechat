page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.editName-box {
  height: 100%;
  width: 100%;
  padding: 0 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.editName-box_content {
  flex: 1;
}

.editName_input {
  padding: 44rpx 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 1rpx solid #979797; */
}

.editName_input input{
  flex: 1;
}

.editName_input::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  background: #979797;
  opacity: 0.2;
}

.editName_input-rigth{
  width: 70rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.editName_input image{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 0;
}

.editName_notice {
  height: 60rpx;
  background: rgba(248, 214, 214, 0.3);
  border-radius: 6rpx;
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 60rpx;
  padding: 0 20rpx;
  position: relative;
}

.editName_notice .editName_notice-left {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #FE0201;
}

.editName_notice .editName_notice-right {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #FE0201;
  position: relative;
  z-index: 10;
}

.editName_notice image{
  position: absolute;
  right: 0;
  top: 0;
  width: 134rpx;
  height: 60rpx;
}


.top_input {
  padding-top: 90rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  width: 652rpx;
  margin-bottom: 28rpx;
}

.top_input input {
  width: 80%;
}

.notice {
  width: 652rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8D6D6;
  border-radius: 6rpx;
  font-size: 24rpx;
  
  font-weight: 400;
  color: #FE0201;
  padding: 14rpx 22rpx;
}

.bot_btn {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 654rpx;
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
}

.no_data {
  background: linear-gradient(270deg, #ECECEC 0%, #D9D9D9 100%);
  border-radius: 12rpx;
  border: none;
  overflow: hidden;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

page {
  overflow: hidden;
}

.line {
  opacity: 0.2;
  background-color: #979797;
  margin-bottom: 28rpx;
}

.cross {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100rpx;
  height: 80rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}