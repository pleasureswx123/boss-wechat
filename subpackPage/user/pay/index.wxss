/* subpackPage/user/pay/index.wxss */

page {
    height: 100%;
}

.weixinPay {
    height: 100%;
    padding: 0 48rpx;
    box-sizing: border-box;
    background-color: #f5f5f5;
}

.payMoney {
    padding-top: 96rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.payMoney text {
    height: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 44rpx;
}

.payMoney .money {
    height: 90rpx;
    font-size: 70rpx;
    font-weight: 400;
    color: #FE0201;
    line-height: 90rpx;
}

.payMoney .buyInfo {
    padding-top: 12rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #999999;
}
.payMode{
  padding-bottom: 30px;
}
.payMode .mode {
    display: inline-block;
    height: 40rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 40rpx;
    padding: 100rpx 0 34rpx;
}


.weixinPayBg {
    padding: 0 40rpx 0 36rpx;
    height: 132rpx;
    background: #E7E7E7;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.weixinPayBg image {
    width: 56rpx;
    height: 50rpx;
}

.payText {
    flex: 1;
    height: 44rpx;
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 44rpx;
    padding-left: 28rpx;
}

.gc-radio {
    width: 36rpx;
    height: 36rpx;
    background: #D8D8D8;
    border: 4rpx solid #CFCDCD;
    border-radius: 50%;
    position: relative;
}

.gc-radio image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 22rpx;
    height: 22rpx;
}

.active {
    background: #00C800 !important;
    border: 4rpx solid rgba(0, 200, 0, 0.3) !important;
}


.rechargeBottom {
    /* position: fixed; */
    bottom: 110rpx;
    width: 654rpx;
    height: 92rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    text-align: center;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 92rpx;
    margin-top: 20px;
}

.agreement {
    /* position: fixed; */
    /* bottom: 172rpx; */
    margin-top: 20rpx;
}

.labelText {
    font-size: 24rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.opacity {
    opacity: 0.5;
}

