/* subpackPage/user/setup/addShield/index.wxss */
page {
  background-color: #ffffff;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.shieId {
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.van-search__content {
  background-color: #ffffff !important;
  padding: 12rpx 0 !important;
}

.input {
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.4);
  margin: 0 48rpx;
  box-sizing: border-box;
}

.inputSearch{
  padding: 0 !important;
}

.head {
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 50rpx;
}

.selectLabel {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}

.text {
  line-height: 60rpx;
}

.item {
  display: flex;
  align-items: center;
  /* border-bottom: 1px solid #e6e3e3; */
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.2);
  box-sizing: border-box;
  padding: 36rpx 0rpx;
}

.item:last-child {
  border: none;
}

.item text {
  font-size: 28rpx;

  font-weight: 400;
  color: #1D2129;
  flex: 1;
  margin-left: 10rpx;
}

.manage {
  width: 100%;
  border-top: 1rpx solid rgba(151, 151, 151, 0.2);
}

.van_checked {
  padding: 26rpx 48rpx;
  box-sizing: border-box;
}

.label-class {
  font-weight: 400;
  color: #999999 !important;
  font-size: 28rpx;
}

.man_btn {
  padding: 0 48rpx 100rpx;
  box-sizing: border-box;
}

.man_btn>button {
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  padding: 0 42rpx;
  box-sizing: border-box;
}

.opacityBtn{
  opacity: 0.5;
}

.list {
  /* height: calc(100vh - 388rpx); */
  flex: 1;
  overflow: auto;
  display: flex;
  flex-direction: column;
  padding: 0 48rpx;
  box-sizing: border-box;
}