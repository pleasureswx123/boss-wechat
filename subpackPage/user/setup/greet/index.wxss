/* subpackPage/user/setup/greet/index.wxss */
page {
    background-color: #F5F5F5;
    /* padding: 0rpx 48rpx;
    box-sizing: border-box; */
    overflow: hidden;
}

.node-class {
    height: 14px !important;
    width: 14px !important;
    top: 6rpx !important;
    left: 4rpx !important;
}

.head {
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #999999;
    font-weight: 600;
    padding: 0rpx 48rpx;
    box-sizing: border-box;
    /* margin-bottom: 20rpx; */
    display: flex;
}

.head view{
  height: 70rpx;
  line-height: 70rpx;
    margin-right: 40rpx;
}

.active{
    color: #1D2129;        
}

.greet {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 48rpx 28rpx;
}

.line {
    width: 100%;
    padding: 0;
    border-bottom: 1rpx solid #ededed;
    margin-bottom: 60rpx;
    height: 0;
}

.greet text {
    display: inline-block;
    width: 582rpx;
    margin-right: 26rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #666666;
}

.custom-class {
    /* text-align: center; */
    margin-top: 10rpx;
}

.item {
    padding: 40rpx 0;
    display: flex;
    /* justify-content: space-between; */
    align-items: center;
    border-bottom: 1px solid #ededed;
}

.item .text {
    display: inline-block;
    width: 582rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #666666;
    margin-right: 16rpx;
}

.itemText{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.itemTextIcon{
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}
.deleteIcon{
    width: 36rpx !important;
    height: 36rpx !important;
    margin-right: 48rpx;
}
.editIcon{
    width: 36rpx !important;
    height: 36rpx !important;
}

.item .selected{
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 1rpx solid #c8c9cc;
}

.item image {
    width: 30rpx;
    height: 20rpx;
    flex-shrink: 0;
}

scroll-view ::-webkit-scrollbar {
    width: 0;
}

.popup-button {
    background-color: #F5F5F5;
    height: 172rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx 48rpx 0;
}

.button_screen {
    height: 130rpx;
    text-align: center;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    padding: 0rpx 56rpx 0 54rpx;
}

.comfirm {
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 16rpx;
    /* position: fixed;
    bottom: 92rpx; */
    /* width: 640rpx; */
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 80rpx;
    text-align: center;
    flex: 1;
}

.custom {
    width: 208rpx;
    height: 80rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    border: 2rpx solid #DBDBDB;
    text-align: center;
    line-height: 80rpx;
    margin-right: 18rpx;
}

.van-switch {
    border: none !important;
    width: 92rpx !important;
    height: 49rpx !important;
}

.van-switch__node {
    top: 50% !important;
    left: 4rpx !important;
    height: 19px !important;
    width: 19px !important;
    transform: translateY(-50%) !important;
    box-shadow: none !important;
}

.van-switch--on .van-switch__node {
    left: 100% !important;
    transform: translateY(-52%) translateX(-110%) !important;
    box-shadow: none !important;
}

.button_flex {
    display: flex;
    align-items: center;
}

.pop_box {
    padding-top: 62rpx;
    width: 576rpx;
    background: #FFFFFF;
}
.pop_box_middle {
    font-size: 28rpx;
    text-align: center;
    font-weight: 400;
    color: #333333;
    /* padding-left: 50rpx; */
    margin-bottom: 58rpx;
}
.pop_box_bot {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.pop_box_bot_left,.pop_box_bot_right{
    width: 49%;
    height: 102rpx;
    line-height: 102rpx;
    text-align: center;
}
.pop_box_bot {
    border-top: 1rpx solid #f1f1f1;
    opacity: 0.9;
}
.pop_box_bot_left {
    border-right: 1rpx solid #f1f1f1;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #666666;
}
.pop_box_bot_right {
    font-size: 28rpx;
    font-weight: 500;
    color: #FE0201;
}
.zhCont{
  width: 654rpx;
  height: 676rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 32rpx;
  margin: 0 auto;
}
.headTit{
  height: 158rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.headTit .name{
  font-size: 36rpx;
  color: rgba(0, 0, 0, 0.8);
}
.headTit .post{
  font-size: 26rpx;
  color: rgba(51, 51, 51, 0.8);
}