/* subpackPage/user/setup/boss/index.wxss */

page {
  background-color: #ffffff;
  padding: 20rpx 48rpx;
  box-sizing: border-box;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
  padding: 28rpx 0;
}

.item text {
  font-size: 32rpx;

  font-weight: 500;
  color: #1D2129;
}

.left>view {
  font-size: 24rpx;

  font-weight: 400;
  color: #666666;
}

.pop_box {
  padding-top: 62rpx;
  width: 576rpx;
  background: #FFFFFF;
}

.pop_box_middle {
  font-size: 26rpx;

  font-weight: 400;
  color: #666666;
  padding: 0 50rpx;
  margin-bottom: 58rpx;
}

.pop_box_bot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pop_box_bot_left,
.pop_box_bot_right {
  width: 49%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
}

.pop_box_bot {
  border-top: 1rpx solid #f1f1f1;
  opacity: 0.9;
}

.pop_box_bot_left {
  border-right: 1rpx solid #f1f1f1;
  font-size: 28rpx;

  font-weight: 400;
  color: #666666;
}

.pop_box_bot_right {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #037AFF;
}

.van-switch {
  border: none !important;
  width: 92rpx !important;
  height: 48rpx !important;
}

.van-switch__node {
  top: 50% !important;
  left: 4rpx !important;
  height: 20px !important;
  width: 20px !important;
  transform: translateY(-50%) !important;
  box-shadow: none !important;
}

.van-switch--on .van-switch__node {
  left: 100% !important;
  transform: translateY(-52%) translateX(-110%) !important;
  box-shadow: none !important;
}

