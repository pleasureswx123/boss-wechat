/* subpackPage/user/setup/account/phone.wxss */
page {
  background-color: #ffffff;
  padding: 32rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.head {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1D2129;
}

.text {
  font-size: 24rpx;

  font-weight: 400;
  color: #999999;
  margin-top: 24rpx;
}

.cen {
  height: 60rpx;
  background: #F9D7D7;
  border-radius: 6rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 22rpx;
}

.cen .textTips {
  flex: 1;
  font-size: 24rpx;
  font-weight: 400;
  color: #FE0201;
  line-height: 60rpx;
  padding-left: 22rpx;
  box-sizing: border-box;
}

.cen .closeIcon {
  width: 60rpx;
  /* flex: 1; */
  text-align: right;
  padding-right: 16rpx;
  box-sizing: border-box;
}

.input {
  display: flex;
  justify-content: space-between;
  height: 140rpx;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  padding: 0 40rpx;
}

input {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #1D2129;
}

.inputBtn {
  height: 48rpx;
  background: #FFEEEE;
  border-radius: 30rpx;
  border: 2rpx solid #FE0201;
  text-align: center;
}

.inputBtn .code {
  font-weight: 400;
  font-size: 22rpx;
  color: #FE0201;
  line-height: 48rpx;
  padding: 0 28rpx 0 30rpx;
}


button {
  height: 80rpx;
  border-radius: 12rpx;
  margin-top: 60rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
}

.greybtn {
  background: #cccccc;
  /* background: #f1f1f1; */
  color: #ffffff;
}

.input_text {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  padding-right: 40rpx;
  border-right: 1px solid #e2dfdf;
  margin-right: 40rpx;
}


.revise {
  height: 60rpx;
  background: rgba(248, 214, 214, 0.5);
  border-radius: 6rpx;
  margin-top: 28rpx;
  position: relative;
  display: flex;
  align-items: center;
  /* line-height: 60rpx; */
  justify-content: space-between;
  padding: 0 20rpx 0 22rpx;
}

.revise .revise-left {
  /* font-family: PingFangSC, PingFang SC; */
  font-weight: 400;
  font-size: 24rpx;
  color: #FE0201;
}

.revise .revise-right {
  /* font-family: PingFangSC, PingFang SC; */
  font-weight: 400;
  font-size: 24rpx;
  color: #FE0201;
  position: relative;
  z-index: 10;
}

.revise image {
  position: absolute;
  right: 0;
  top: 0;
  width: 150rpx;
  height: 60rpx;
}