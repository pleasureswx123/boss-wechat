/* subpackPage/user/setup/index.wxss */

page {
  background: #ffffff;
  overflow: hidden;
}

.item {
  height: 132rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 50rpx;
}

image {
  width: 25rpx;
  height: 30rpx;
}

text {
  font-size: 28rpx;

  font-weight: 400;
  color: #666666;
}

.btn {
  height: 80rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ebebeb;
  margin: 0 32rpx;
  margin-top: 120rpx;
  width: 90%;
  font-size: 32rpx;

  font-weight: 400;
  line-height: 80rpx;
  color: #666666;
  background: #f1f1f1;
}

.pop_box {
  padding-top: 62rpx;
  width: 576rpx;
}

.pop_box_middle {
  padding-left: 50rpx;
  margin-bottom: 58rpx;
  text-align: center;
  font-size: 32rpx;

  font-weight: 400;
  color: #1D2129;
  letter-spacing: 2px;
}

.pop_box_bot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pop_box_bot_left,
.pop_box_bot_right {
  width: 49%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
}

.pop_box_bot {
  border-top: 1rpx solid #ededed;
  opacity: 0.9;
}

.pop_box_bot_left {
  border-right: 1rpx solid #ededed;
  font-size: 28rpx;

  font-weight: 400;
  color: #666666;
}

.pop_box_bot_right {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #037AFF;
}

.line {
  height: 0;
}