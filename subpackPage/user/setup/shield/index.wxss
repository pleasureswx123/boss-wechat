/* subpackPage/user/setup/shield/index.wxss */
page{
    background-color: #ffffff;
    padding: 60rpx 0;
    box-sizing: border-box;
}
.head{
    font-size: 22rpx;
    
    font-weight: 400;
    color: #666666; 
    margin-bottom: 20rpx;
    padding: 0 48rpx;
    box-sizing: border-box;
}
.list_head{
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    padding: 0 48rpx;
    box-sizing: border-box;
}
.list_head view{
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
}
.list_head text{
    font-size: 26rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.list{
    height: calc(100vh - 610rpx);
    overflow: hidden;
    overflow-y: auto;
}

.batchList{
    height: calc(100vh - 610rpx);
}
.lookList{
    height: calc(100vh - 500rpx);
}

.item{
    display: flex;
    justify-content: space-between;
    height: 120rpx;
    align-items: center;
    border-bottom:  1px solid #ededed;
    padding: 0 48rpx;
    box-sizing: border-box;
}
.item text{
    font-size: 26rpx;
    
    font-weight: 400;
    color: #1D2129;
    flex: 1;
    margin-left: 10rpx;
}
.last{
    width: 126rpx;
    height: 52rpx;
    border-radius: 32rpx;
    border: 1rpx solid #FE0201; 
    font-size: 26rpx;
    
    font-weight: 400;
    color: #FE0201;
    text-align: center;
    line-height: 52rpx;
}
.look{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #999999;
    margin-top: 60rpx;
    margin-bottom: 20px;
}
.look text{
    font-size: 25rpx;
    margin-left: 8rpx;
}
.fot_btn{
    position: fixed;
    width: 88%;
    bottom: 60rpx;
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    margin: 10rpx 48rpx 0;
}
.manage{
    position: fixed;
    bottom: 60rpx;
    /* height: 280rpx; */
    border-top: 1px solid #e6e3e3;
    width: 100%;
    padding: 20rpx 48rpx ;
    box-sizing: border-box;
}
.man_btn{
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}
.van_checked{
    font-size: 26rpx;
    
    font-weight: 400;
    color: #999999;
}
.man_btn>button:nth-child(1){
    border-radius: 12rpx;
    border: 1rpx solid #FE0201;
    padding: 0 42rpx ;
    font-size: 32rpx;
    box-sizing: border-box;
    height: 80rpx;
    line-height: 80rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FE0201;
}
.man_btn>button:nth-child(2){
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    /* opacity: 0.7; */
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 80rpx;
    padding: 0 42rpx;
}

.input {

    display: flex;
    align-items: center;
    height: 68rpx;
    background: #ffffff;
    border-radius: 38rpx;
    border: 1rpx solid;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.input-class {
    height: 100%;
    flex: 1;
    font-size: 24rpx;
    font-weight: 400;
    color: #1D2129;
}

.searchInput .searchIcon {
    padding-right: 4px;
    width: 28rpx;
    height: 28rpx;
}


.searchCompany{
    padding: 40rpx 40rpx;
}

.searchInput {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 68rpx;
    background: #ffffff;
    border-radius: 38rpx;
    border: 2rpx solid #ededed;
    /* border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px); */
}


.select {
    padding-top: 24rpx;
}

.selectItem {
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx 16rpx 24rpx;
}

.countent {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    line-height: 36rpx;
}

.postOrfirmTag {
    margin-left: 20rpx;
    width: 62rpx;
    height: 36rpx;
    border-radius: 6rpx;

    text-align: center;
}

.postOrfirmTag text {
    /* width: 44rpx; */
    height: 32rpx;
    font-size: 22rpx;
    
    font-weight: 400;
    /* color: #FE0201; */
    line-height: 32rpx;
}

.post {
    border: 1rpx solid #FE0201;
    color: #FE0201;
}

.firm {
    border: 1rpx solid #23C61B;
    color: #2FCC28;
}

.line {
    /* width: 90%; */
    /* padding: 0 24rpx; */
    height: 1px;
    opacity: 0.2;
    border-bottom: 2rpx solid #ededed;
    /* border-image: linear-gradient(to bottom, transparent 50%, #979797 50%) 0 0 100% 0; */
}

.selectItem image {
    padding-right: 3px;
    width: 30rpx;
    height: 30rpx;
}