.top_input {
    padding-top: 90rpx;
    margin-left: 50%;
    transform: translateX(-50%);
    width: 652rpx;
    margin-bottom: 28rpx;
    position: relative;
}
.right_num {
    position: absolute;
    bottom: -90rpx;
    right: 48rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #999999;
}
.bot_btn {
    position: fixed;
    bottom: 100rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 654rpx;
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 80rpx;
    text-align: center;
}
.no_data {
    background: linear-gradient(270deg, #ECECEC 0%, #D9D9D9 100%);
    border-radius: 12rpx;
    border: none;
    overflow: hidden;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
}
.box{
    background: #ffffff;
}
.clearIcon{
  position: absolute;
  right: 0;
  top:100rpx;
  font-size: 38rpx;
  color: #666;
}