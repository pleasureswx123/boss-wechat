/* subpackPage/user/phoneCode/phoneCode.wxss */

page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.phoneCode {

  background-color: #FFF;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.title {
  font-size: 56rpx;
  color: #1D2129;
  margin-top: 100rpx;
  font-weight: bold;
  padding: 0 48rpx;
  box-sizing: border-box;
}


.sub-title {
  font-size: 28rpx;
  color: #666;
  margin-top: 34rpx;
  padding: 0 48rpx;
  box-sizing: border-box;
}


.re-get {
  font-size: 28rpx;
  color: #666;
  margin-top: 62rpx;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.blue {
  color: #2E718F;
}

.time {
  /* color: #2E718F; */
  color: #FE0201;
  padding: 0 10rpx;
}

.code-container {
  position: relative;
}

.code-input {
  opacity: 0;
  position: absolute;
  left: -9999px;
}

.cursor {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 40px;
  height: 2px;
  background-color: #000;
  transition: all 0.5s ease-in-out;
}



/* 验证码框 */
.register_photocode {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20px;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.register_photocode_ul {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 18rpx;
  background: #fff;
}

.register_photocode_li {
  width: 96rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-bottom: 4rpx solid #bbb;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 56rpx;
  margin-right: 18rpx;
  text-align: center;
}

.register_photocode .register_photocode_input {
  position: absolute;
  left: -100%;
  top: 0;
  width: 200%;
  height: 100%;
  opacity: 0;
  color: transparent;
  letter-spacing: 50.4rpx !important;
  background: none;
  padding-left: 30.6rpx;
  /* box-sizing: border-box; */
  caret-color: transparent !important;
}

/* .register_photocode input:first-line {
  color: transparent;
} */


.register_photocode_cursor {
  width: 1px;
  height: 76rpx;
  background-color: #000;
  /* animation: focus 1.1s infinite; */
}

.blink {
  animation: blink-animation 1s infinite;
}

/* 光标闪烁 */
@keyframes blink-animation {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.has {
  border-bottom: 4rpx solid #e4899c;
}

.phoneCode-input{
  height: 96rpx;
  line-height: 96rpx;
  /* border-bottom: 4rpx solid #bbb; */
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}

.phoneCode-input input{
  width: 100%;
}