.addJobBox {
  overflow: hidden;
  background: #ffffff;
  width: 100%;
  height: 100%;
}
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.headbg{
width: 100%;
height: 256rpx;
position: absolute;
top:0;
left:0;
z-index: 99;
}
.add_job_box{
  position: relative;
  z-index: 100;
  margin: 0 98rpx;
}
.title1{
font-weight: 600;
font-size: 56rpx;
color: #1D2129;
margin: 0 98rpx;
margin-top: 166rpx;
position: relative;
z-index: 100;
}
.itemName{
  font-weight: 600;
  font-size: 36rpx;
  color: #1D2129;
  line-height: 50rpx;
  margin-top: 58rpx;
}
.qzStatus{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.qzItem{
  flex:1;
  height: 90rpx;
  background: #F7F7F7;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  font-size: 28rpx;
  color: #1D2129;
  margin-top: 24rpx;
}
.qzItem:first-child{
  margin-right: 38rpx !important;
}
.scrollView{
  height: calc(100vh - 580rpx);
}
.selectedBtn{
  margin: 0 96rpx;
  height: 80rpx;
  background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 44rpx;
  font-weight: 500;
  font-size: 28rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.opacity5{
  opacity: 0.5;
}
.selectedType{
  background: #FFF3F3;
border-radius: 16rpx;
border: 2rpx solid #FE0201;
color: #FE0201;
font-size: 28rpx;
}
.iconCloseBox{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  top:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.iconClose{
  width: 28rpx;
  height: 28rpx;
}
.yearDesp{
  font-weight: 500;
  font-size: 28rpx;
  color: #999999;
  margin-top: 8rpx;
}