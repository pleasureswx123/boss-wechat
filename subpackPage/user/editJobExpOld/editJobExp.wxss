.addJobBox {
    overflow: hidden;
    background: #ffffff;
    width: 100%;
    height: 100%;
}

page{
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.add_job_box {
    padding: 20rpx 48rpx;
    box-sizing: border-box;
}
.grey{
  background: #eee !important;
  color: #666 !important;
}

.title {
    font-size: 48rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
}

.discribe {
    font-size: 28rpx;
    
    font-weight: 400;
    color: #666666;
    margin-top: 4rpx;
    margin-bottom: 30rpx;
}

.item {
    margin: 28rpx 0;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

