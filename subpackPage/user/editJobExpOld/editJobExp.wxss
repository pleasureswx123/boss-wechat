.item_left {
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.item_right {
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
    display: flex;
    align-items: center;
}

.sex {
    display: flex;
}

.sex_item {
    width: 136rpx;
    height: 56rpx;
    border: 1rpx solid #FE0201;
    text-align: center;
    line-height: 56rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FE0201;
}

.sex_nan {
    border-radius: 10rpx 0 0 10rpx;
    overflow: hidden;
}

.sex_nv {
    border-radius: 0rpx 10rpx 10rpx 0rpx;
    overflow: hidden;
    border-left: 0;
}

.active_sex {
    background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%) !important;
    color: #fff !important;
}

.item_left_cont_top {
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.item_left_cont_bot {
    font-size: 24rpx;
    
    font-weight: 400;
    color: #666666;
    margin-top: 3rpx;
}

.more_btn {
    width: 678rpx;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 80rpx;
    left: 36rpx;
}

.left_btn {
    width: 180rpx;
    height: 80rpx;
    background: #F1F1F1;
    border-radius: 12rpx;
    font-size: 32rpx;
    
    font-weight: 400;
    color: #666666;
    line-height: 80rpx;
    text-align: center;
    margin-right: 20rpx;
}

.right_btn {
    flex: 1;
    /* width: 456rpx; */
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 32rpx;
    
    font-weight: 400;
    color: #FFFFFF;
}

.pop_box {
    width: 576rpx;
    height: 270rpx;
    background: #FFFFFF;
    border-radius: 24rpx;
}

.pop_box_top {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 72rpx;
    border-bottom: 1rpx solid #f5f5f5;
    padding-bottom: 50rpx;
    box-sizing: border-box;
}

.pop_box_bot {
    display: flex;
}

.pop_box_bot_left,
.pop_box_bot_right {
    width: 50%;
    text-align: center;
    height: 102rpx;
    line-height: 102rpx;
}

.pop_box_bot_left {
    border-right: 1rpx solid #f5f5f5;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    letter-spacing: 1px;
}

.pop_box_bot_right {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #037AFF;
}

.picker-view {
    width: 570rpx;
    height: 500rpx;
    text-align: center;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.header {
    width: 100%;
    height: 45px;
    padding: 10px 20px 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    font-size: 15px;
    background: #fff;
    position: relative;
}

.header .cancel {
    color: rgb(96, 98, 102);
}

.header .confirm {
    color: #FE0201;
}

.tipFont {
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 550;
    color: #1D2129;
    display: flex;
    justify-content: center;
}

.selecetedIndicator {
    height: 36px;
    position: relative;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.selecetedIndicator::after {
    display: none;
}

.selecetedIndicator::before {
    display: none;
}

.columnStyle {
    line-height: 72rpx;
    color: #1D2129;
    font-size: 30rpx;
    background: transparent;
    margin: auto 0;
    /* background: #f5f5f5; */
}

.activeSize{
    font-size: 38rpx;
    /* border-top: 2rpx solid #666666; */
}

.leftPay {
    border-radius: 8rpx 0 0 8rpx;
}

.rightPay {
    border-radius: 0 8rpx 8rpx 0;
}

.middle {
    background: #f5f5f5;
    height: 100rpx;
    width: 100%;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 99;
}

.line{
    /* height: .5px;
    width: 100%; */
    background-color: #f5f5f5 !important;
    transform: scaleY(.5);
    -webkit-transform: scaleY(.5);
}