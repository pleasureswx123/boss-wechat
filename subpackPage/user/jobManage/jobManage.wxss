page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.expectBox {
    overflow: hidden;
    background: #ffffff;
    height: 100%;
    width: 100%;
}

.content_box {
    padding: 60rpx 48rpx;
    box-sizing: border-box;
}

.content_box_top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.content_box_top_left {
    font-size: 48rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 550;
    color: #1D2129;
    line-height: 66rpx;
}

.content_box_top_right {
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 550;
    color: #1D2129;
}

.discribe {
    font-size: 28rpx;
    
    font-weight: 400;
    color: #666666;
}

.job_item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 52rpx;
}

.item_left_top {
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.item_left_bot {
    font-size: 24rpx;
    
    font-weight: 400;
    color: #666666;
}

.buttomBtn {
    /* position: fixed;
    bottom: 120rpx; */
    /* padding: 0 36rpx; */
    padding-top: 36rpx;
    width: 100%;
    box-sizing: border-box;
    /* left: 50%;
    transform: translateX(-50%); */
}

.add_job {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    border-radius: 12rpx;
    border: 2rpx solid rgba(239, 45, 45, 0.5);
}

.left_add {
    width: 32rpx;
    height: 80rpx;
    margin-right: 20rpx;
    position: relative;
}

.left_add image {
    position: absolute;
    top: 51%;
    transform: translateY(-50%);
    width: 32rpx;
    height: 32rpx;
    /* margin-bottom: 8rpx; */
}

.right_add {
    
    font-weight: 400;
    color: #FE0201;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 44rpx;
}

.job_status {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 18rpx;
    /* margin-top: 86rpx; */
    margin-top: 56rpx;
    position: relative;
}

.job_status::before {
    position: absolute;
    top: calc(100% + 28rpx);
    content: "";
    height: 2rpx;
    width: 100%;
    background-color: #F5F5F5;
}

.job_status_left {
    font-size: 32rpx;
    display: flex;
    align-items: center;
    font-weight: 400;
    color: #1D2129;
}

.job_status_right {
    display: flex;
    align-items: center;
}

.job_status_right_text {
    font-size: 24rpx;
    
    font-weight: 400;
    color: #666666;
    margin-right: 38rpx;
}

.resume {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 80rpx;
}

.resume_left_top {
    font-size: 32rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.resume_left_bot {
    font-size: 24rpx;
    
    font-weight: 400;
    color: #666666;
}

.pop_box {
    padding: 64rpx 48rpx;
    box-sizing: border-box;
}

.pop_box_title {
    font-size: 44rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
}

.pop_box_discribe {
    font-size: 28rpx;
    font-family: PingFangSC-Light, PingFang SC;
    font-weight: 300;
    color: #666666;
    margin-bottom: 22rpx;
}

.job_expt_item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0 30rpx 6rpx;
    box-sizing: border-box;
}

.job_expt_item_left {
    display: flex;
    align-items: center;
}

.job_expt_item_right {
    width: 48rpx;
    height: 34rpx;
}

.job_expt_item_left_title {
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    margin-right: 24rpx;
}

.job_expt_item_left_discribe {
    width: 116rpx;
    height: 46rpx;
    background: #fdeaea;
    border-radius: 4rpx;
    font-size: 22rpx;
    
    font-weight: 400;
    color: #FE0201;
    line-height: 46rpx;
    text-align: center;
}

.selected {
    color: #FE0201 !important;
}

.van-switch {
    border: none !important;
    width: 72rpx !important;
    height: 39rpx !important;
}

.van-switch__node {
    top: 50% !important;
    left: 4rpx !important;
    height: 14px !important;
    width: 14px !important;
    transform: translateY(-50%) !important;
}

.van-switch--on .van-switch__node {
    left: 100% !important;
    transform: translateY(-52%) translateX(-110%) !important;
}

.jyopen{
  width: 118rpx;
  /* height: 46rpx; */
  background: #FFEEEE;
  border-radius: 4rpx;
  /* display: inline-flex; */
  display: flex;
  margin-left: 12rpx;
  font-weight: 400;
  font-size: 24rpx;
  color: #FE0201;
  justify-content: center;
  align-items: center;
  padding: 8rpx 10rpx;
}