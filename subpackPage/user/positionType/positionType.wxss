.box {
    background-color: #fff;
}
.top_input {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 670rpx;
    height: 68rpx;
    line-height: 68rpx;
    background: #F5F5F5;
    border-radius: 38rpx;
    /* border: 1rpx solid; */
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
    margin-bottom: 20rpx;
}
.top_input input {
    width: 670rpx;
    height: 68rpx;
    line-height: 68rpx;
    padding-left: 64rpx;
    box-sizing: border-box;
}
.icons {
    position: absolute;
    left: 28rpx;
    top: 50%;
    transform: translateY(-50%);
}
.all_line {
    width: 750rpx;
    height: 1rpx;
    background-color: #979797;
    transform: scaleY(0.3);
    transform-origin: 50% 100%; /*为了防止线模糊*/
}
.middle_line {
    width: 1rpx;
    height: calc(100vh - 90rpx);
    background-color: #979797;
    transform: scaleX(0.1);
    transform-origin: 50% 100%; /*为了防止线模糊*/
}
.bot_box {
    display: flex;
    align-items: center;
}
.left_scroll {
    width: 280rpx;
}
.list_item {
    padding-left: 48rpx;
    margin-top: 60rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    box-sizing: border-box;
}
.selected {
    color: #FE0201 !important;
}
.xqName{
    color: #1D2129;
    font-size: 40rpx;
    height: 106rpx;
    display: flex;
    align-items: center;
}
.right_scroll{
    flex: 1;
    padding: 28rpx 0 28rpx 28rpx;
}
.sitemBox{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.sitem{
    width: 185rpx;
    height: 63rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    margin-bottom: 28rpx;
    margin-right: 30rpx;
    font-size: 22rpx;
    color: #1D2129;
    align-items: center;
    justify-content: center;
    display: flex;
}
.postList{
  position: fixed;
  top:69rpx;
  left: 0;
  width: 100%;
  height: calc(100% - 80rpx);
  background: #fff;
  z-index: 100;
  overflow: auto;
}
.postList .item{
  margin:0 46rpx;
  border-bottom: 2rpx solid #f5f5f5;
  min-height: 146rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.textName{
  font-weight: 400;
  font-size: 28rpx;
  color: #FE0201;
  line-height: 50rpx;
}
.levelName{
  font-weight: 400;
  font-size: 24rpx;
  color: #666666;
}