.box {
  background: #f5f5f5;
}

.interview_box {
  background: #fff;
}

.interview_box_item {
  padding: 28rpx 47rpx;
  /* box-sizing: border-box; */
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #fff;
}

.item_left {
  width: 90rpx;
  height: 90rpx;
  flex-shrink: 0;
  margin-right: 30rpx;
}

.item_left image {
  border-radius: 12rpx;
}

.item_middle {
  flex: 1;
}

.item_middle_top,
.item_middle_bot {
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item_middle_top {
  font-size: 28rpx;
  font-weight: 400;
  color: #1D2129;
}

.item_middle_bot {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  margin-top: 4rpx;
}

.item_right {
  display: flex;
  flex-direction: column;
  text-align: right;
  flex-shrink: 0;
}

.item_right_top {
  font-size: 24rpx;
  font-weight: 400;
  color: #1D2129;
  margin-bottom: 8rpx;
}

.item_right_bot {
  font-size: 24rpx;

  font-weight: 400;
  color: #999999;
}

.NavClass {
  background-color: #fff;
}

.interviewMD {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  height: 62rpx;
  line-height: 62rpx;
  padding-left: 70rpx;
}

.no_data {
  position: relative;
  width: 100%;
  height: 100%;
}

.no_data_center {
  position: absolute;
  top: calc(50% - 44px);
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0 154rpx;
  box-sizing: border-box;
}

.no_data_img {
  width: 402rpx;
  height: 214rpx;
}

.no_data_text {
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  margin-bottom: 160rpx;
  margin-top: 8rpx;
}

.no_data_button {
  width: 100%;
  height: 72rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%), #FFFFFF; */
  background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 16rpx;
  text-align: center;
  font-weight: 400;
  font-size: 30rpx;
  color: #FFFFFF;
  line-height: 72rpx;
  letter-spacing: 2px;
}
.custom-class {
  height: 100%;
}

.custom-class .van-tabs__content {
  height: calc(100% - 44px);
}

.van-tab__pane {
  height: 100% !important;
}