page{
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}
.box{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 42rpx;
  box-sizing: border-box;
}

.box_head{
  width: 100%;
}

.box_head .top_input {
    margin-bottom: 28rpx;
    /* width: 90%; */
    padding-bottom: 28rpx;
    border-bottom: 1px solid rgb(224, 222, 222);
    font-size: 28rpx;
    
    font-weight: 400;
    color: #999999;
    margin-top: 32rpx;
    display: flex;
    justify-content: space-between;
}
.box_head .top_input input{
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #666666;
}
.box_head .top_input .right_num {
    font-size: 28rpx;
    
    font-weight: 400;
    color: #999999;
    text-align: right;
}

.box_content{
  flex: 1;
  overflow: scroll;
}
.scrollView{
  height: 100%;
}

.box_footer{
  height: 140rpx;
  padding-top: 20rpx;
}
.bot_btn {
    height: 80rpx;
    /* width: 90%; */
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 80rpx;
    text-align: center;
   
}
.no_data {
    background: linear-gradient(270deg, #ECECEC 0%, #D9D9D9 100%);
    border-radius: 12rpx;
    border: none;
    overflow: hidden;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
}
.schoolList{
    display: flex;
    flex-direction: column;
}
.schoolList view{
    height: 100rpx;
    border-bottom: 1px solid rgb(219, 218, 218);
    line-height: 100rpx;
    font-size: 28rpx;
}
.footer{
    position: fixed;
     background-color: #fff;
     bottom: 70rpx;
     width: 100%;
}
.box{
    background-color: #ffffff;
}