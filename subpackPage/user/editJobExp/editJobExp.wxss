.addJobBox {
    overflow: hidden;
    background: #ffffff;
    width: 100%;
    height: 100%;
}

page{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.headbg{
  width: 100%;
  height: 256rpx;
  position: absolute;
  z-index: 1;
}
.add_job_box{
  position: relative;
  z-index: 2;
  margin-top: 166rpx;
}
.add_job_box .title{
  margin: 0 66rpx;
  font-weight: 600;
  font-size: 56rpx;
  color: #1D2129;
}
.tjrg{
  margin: 62rpx 66rpx 0;
  font-weight: 600;
  font-size: 40rpx;
  color: #333333;
}
.tjrgList{
  margin: 0 66rpx;
  min-height: 63rpx;
  border-radius: 8rpx;
  display: flex;
  flex-wrap: wrap;
}
.sitem{
  min-width: 126rpx; /* 或者其他宽度 */
  height: 63rpx; /* 设置高度用于演示 */
  margin: 28rpx 0 0; /* 项目之间的间距 */
  background-color: #F5F5F5;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 400;
  font-size: 26rpx;
  color: #1D2129;
  padding:0 25rpx;
  border-radius: 8rpx;
  margin-right: 32rpx;
}
.selectedBtn{
  margin: 0 66rpx;
  height: 86rpx;
  background: linear-gradient( 308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 44rpx;
  font-weight: 500;
  font-size: 28rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}
.active{
  background: #FFE1E1;
  border-radius: 8rpx;
  border: 2rpx solid #FE0201;
  color: #FE0201;
  font-weight: 600;
}