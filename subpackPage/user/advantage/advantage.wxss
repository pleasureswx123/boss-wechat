page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}

.textarea {
  position: relative;
  width: 100%;
  height: 786rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(151, 151, 151, .4);
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  /* margin: 20rpx auto 0 auto; */
}

.textarea textarea {
  width: 100%;
  height: 100%;
}

.num {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  font-style: normal;
  /* height: 60rpx;
  padding: 0 20rpx; */
  z-index: 900;
}

.superiority_box {
  display: flex;
  flex-direction: column;
  
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.head{
  flex: 1;
  overflow: scroll;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.headBox{
  height: 100%;
}

.alBox {
  margin-top: 26rpx;
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
}

.alBox .baseBox {
  display: flex;
  align-items: center;
  justify-content: center;
}

.alBox .alBox_left {
  padding: 0 20rpx;
  height: 62rpx;
  background: linear-gradient(100deg, #FBE5D4 0%, #FFF5D5 40%, #FDE9E5 86%, #FEE8E8 95%, #FDE7E7 100%, #F4BEFD 100%);
  border-radius: 44rpx;
  margin-right: 20rpx;
}

.alBox .alBox_left image {
  width: 46rpx;
  height: 56rpx;
  margin-right: 16rpx;
}

.alBox .alBox_left .alBox_left-text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 26rpx;
  background: linear-gradient(0deg, #FA2525 0%, #FF5B00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.alBox .alBox_right {
  padding: 0 32rpx;
  height: 62rpx;
  border-radius: 44rpx;
  /* border: 1rpx solid #D5D5D5; */
  border: 1rpx solid #CDCDCD;
}

.alBox .alBox_right image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.alBox_right-text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 26rpx;
  color: #666666;
}

.superiority-recommend {
  /* height: 394rpx; */
  background: #FFF6F2;
  /* background: brown; */
  border-radius: 20rpx;
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  box-sizing: border-box;
}

.recommend_top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend_top-left {
  display: flex;
  align-items: center;
}

.recommend_top-left image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.recommend_top-left text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 26rpx;
  color: #1D2129;
}

.recommend_top-right {
  display: flex;
  align-items: center;
}

.recommend_top-right image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

.recommend_top-right text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 24rpx;
  color: #FE0201;
}

.recommend_content {
  flex: 1;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #54575A;
  margin-top: 28rpx;
}

.tapText {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 24rpx;
  color: #BBBBBB;
  text-align: center;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.submitbtn {
  width: 100%;
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin-top: 36rpx;
}

.footer-button {
  height: 178rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 0 48rpx;
  box-sizing: border-box;
}