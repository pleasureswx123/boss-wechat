page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.componyNameBox {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.componyNameBox_content {
  flex: 1;
  overflow: auto;
}

.content-componyList {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 48rpx;
}

.content-componyItem {
  padding: 36rpx 0;
  position: relative;
  font-weight: 400;
  font-size: 28rpx;
}

.content-componyItem::after {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #f5f5f5;
  content: "";
}


.componyNameBox_footer {
  padding: 0 48rpx 100rpx;
}

.top_input {
  display: flex;
  justify-content: space-between;
  padding: 70rpx 48rpx 44rpx;
  box-sizing: border-box;
}

.placeholderClass {
  font-weight: 400;
  font-size: 28rpx;
  color: #999999;
}

.top_input input {
  flex: 1;
}

.right_num {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-weight: 400;
  color: #999999;
  width: 80rpx;
}

.bot_btn {
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
  margin-top: 30rpx;
}

.no_data {
  background: linear-gradient(270deg, #ECECEC 0%, #D9D9D9 100%);
  border-radius: 12rpx;
  border: none;
  overflow: hidden;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.box {
  background: #fff;
}

