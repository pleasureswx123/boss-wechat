/* subpackPage/user/selectUploadWay/selectUploadWay.wxss */
page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.selectUploadWayBox {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.selectUploadWayBox-content {
  flex: 1;
  overflow: auto;
}

.content-scrollView {
  height: 100%;
}

.scrollView_title {
  font-weight: 400;
  font-size: 26rpx;
  color: #747679;
  text-align: center;
  padding: 40rpx 0 38rpx;
}

.content-scrollView .wayList {
  display: flex;
  flex-direction: column;
  padding: 0 48rpx;
  box-sizing: border-box;
  width: 100%;
}

.van-uploader{
  width: 100%;
}

.van-uploader__slot{
  width: 100%;
}



.wayItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* height: 160rpx; */
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 42rpx 40rpx 44rpx;
  margin-bottom: 20rpx;
  width: 100%;
}

.wayItem .wayItem-left {
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  position: relative;
}


.newTag{
  position: absolute;
  top: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background: #F32E2E;
  border-radius: 50%;
}

.wayItem .wayItem-left image {
  width: 72rpx;
  height: 72rpx;
}

.wayItem-center {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.wayItem-center .topTitle {
  font-weight: 500;
  font-size: 28rpx;
  color: #1D2129;
}

.wayItem-center .buttomText {
  font-weight: 400;
  font-size: 22rpx;
  color: #666666;
}

.selectUploadWayBox-footer {
  position: fixed;
  bottom: 120rpx;
  font-weight: 400;
  font-size: 26rpx;
  color: #747679;
  text-align: center;
  padding: 0 54rpx;
  box-sizing: border-box;
}