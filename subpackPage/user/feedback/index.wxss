/* subpackPage/user/feedback/index.wxss */
page{
    background-color: #F5F5F5;
}

.placeholderClass{
  font-size: 24rpx;
}
.content{
    background-color: #fff;
    margin: 0 32rpx;
    border-radius: 32rpx;
    margin-top: 70rpx;
    padding: 58rpx 36rpx 36rpx 36rpx ;
    box-sizing: border-box;
}

.head{
    font-size: 26rpx;
    font-weight: bold;
    color: #1D2129;
}
.list{
    display: flex;
    justify-content: space-between;
    margin-top: 22rpx;
    margin-bottom: 44rpx;
}
.head_item{
    background: #F5F5F5;
    border-radius: 8rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #1D2129;
    padding: 14rpx 40rpx;
    box-sizing: border-box;
}
.active{
    background: rgba(246,172,172,0.2) !important;
    border: 1rpx solid #F53939 !important;
    color: #F32E2E !important;
}
textarea{
    width: 100%;
    height: 241rpx;
    border-radius: 16rpx;
    color: #1D2129;
    border: 1rpx solid rgba(150,150,150, 0.4);
    margin-top: 22rpx;
    margin-bottom: 36rpx;
    position: relative;
    box-sizing: border-box;
    padding: 22rpx;
    padding-bottom: 45rpx;
    color: #1D2129;
}
.number{
    font-size: 22rpx;
    
    font-weight: 400;
    color: #999999;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    width: 100%;
    text-align: right;

}
.footer{
    display: flex;
    align-items: center;
}
.input{
    height: 65rpx;
    border-radius: 8rpx;
    border: 1rpx solid rgba(150,150,150, 0.4);
    flex: 1;
    padding-left: 16rpx;
    margin-left: 20rpx;
}
.cen{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 58rpx 58rpx 22rpx 68rpx;
}
.cen_text{
    font-size: 22rpx; 
    color: #999999;
}

.fot_btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 50rpx;
    width: 100%;
    /* margin: 0 40rpx; */
    /* box-sizing: border-box; */
}
.my_btn{
    width: 208rpx;
    height: 72rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    font-size: 30rpx; 
    color: #1D2129;
    line-height: 72rpx;
    text-align: center;
    margin-left: 40rpx;
    margin-right: 20rpx;
}
.sub_btn{
    height: 72rpx;
    /* background: #FFFFFF linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 16rpx;
    flex: 1;
    text-align: center;
    line-height: 72rpx;
    font-size: 30rpx; 
    color: #FFFFFF;
    margin-right: 40rpx;
}
.red{
    color: #F32E2E;
}
.cont_img{
    margin: 0 68rpx;
    display: flex;
    justify-content: start;
}
.img{
    width:143rpx;
    height: 143rpx;
    border-radius: 8rpx;
    margin-right: 16rpx;
}
.img:last-child{
    margin-right: 0 !important;
}
.clone{
    width: 30rpx;
    height: 30rpx;
    background: #3D3D3D;
    color: #fff;
    text-align: center;
    line-height: 26rpx;
    border-radius: 15rpx;
    font-size: 25rpx;
    position: absolute;
    top: -6rpx;
    right: -6rpx;
}
.img_item{
    width: 144rpx;
    height: 144rpx;
    border-radius: 8rpx;
    color: #999999;
    text-align: center;
    line-height: 144rpx;
    font-size: 30px;
    margin-right: 16rpx;
    position: relative;
}
.item_bg{
    background-color: #fff;
}
