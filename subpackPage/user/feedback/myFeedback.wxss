/* subpackPage/user/feedback/myFeedback.wxss */

page {
  background-color: #F5F5F5;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.myFeedbackBox {
  height: 100%;
  width: 100%;
  overflow: hidden;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}

.content {
  background-color: #fff;
  border-radius: 32rpx;
  /* margin: 0 32rpx; */
  padding: 48rpx 32rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.head,
.reply {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.head>text:nth-child(1) {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 900;
  color: #1D2129;
}

.head>text:nth-child(2),
.reply>text:nth-child(2) {
  font-size: 26rpx;

  font-weight: 400;
  color: #666666;
}

.head_con {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #1D2129;
  margin: 34rpx 0 22rpx 0;
}

.con_area {
  height: 240rpx;
  border-radius: 32rpx;
  /* opacity: 0.4; */
  color: #1D2129;
  border: 1rpx solid rgba(150, 150, 150, 0.4);
  padding: 28rpx;
  box-sizing: border-box;
  width: 100%;
  margin-bottom: 34rpx;
}

.img_list {
  display: flex;
  flex-wrap: nowrap;
  margin-bottom: 50rpx;
}

.img_item {
  width: 145rpx;
  height: 145rpx;
  margin-right: 8rpx;
}

.reply>text:nth-child(1) {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #037AFF;
}

.rep_area {
  height: 212rpx;
  border-radius: 16rpx;
  opacity: 0.4;
  border: 1rpx solid #979797;
  margin-top: 20rpx;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  color: #1D2129 !important;
  padding-bottom: 60rpx;
}

.number {
  position: absolute;
  right: 20rpx;
  bottom: 28rpx;
  font-size: 22rpx;

  font-weight: 400;
}

.span {
  color: #1D2129 !important;
}

.no_data{
  position: relative;
  width: 100%;
  height: 200px;
  padding-top: 40%;
}
.no_data_center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no_data_img {
  width: 402rpx;
  height: 214rpx;
}
.no_data_text {
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 8rpx;
}