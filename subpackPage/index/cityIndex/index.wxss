/* subpackPage/index/cityIndex/index.wxss */
page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.cityBox {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #F5F5F5;
}

/* 自定义导航栏 */
.backIcon {
    background-size: cover;
    background-position: center -100%;
    width: 100%;
    display: flex;
    position: fixed;
    top: 0;
    z-index: 999;
    align-items: center;
    padding-top: 20px;
}


.van-nav-bar__left {
    padding-left: 16px;
    align-items: center;
    bottom: 0;
    display: flex;
    font-size: 14px;
    position: absolute;
    top: 0
}

.van-nav-bar__title {
    width: 100%;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #000;
    display: flex;
    align-items: center;
    padding-left: 40rpx;
    box-sizing: border-box;
}

.searchInputWarp {
    /* padding-bottom: 54rpx; */
    padding: 38rpx 32rpx;
}


.selectHeight {
    /* height: calc(100% - 24rpx - 68rpx); */
    height: 100%;
    flex: 1;
    margin-left: 20rpx;
    width: calc(100% - 20rpx - 20px);
    position: relative;
}

.rollInput{
    position: absolute;
    top: 0px;
    left: calc(28rpx + 10rpx);
    height: 64rpx;
    line-height: 64rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #1D2129;
    width: calc(100% - 20rpx - 20px - 28rpx);
    overflow: hidden;
    /* transition: transform 0.3s ease-in-out; 添加过渡效果 */
}
.rollInput_item{
    
}

.input {
    display: flex;
    align-items: center;
    height: 64rpx;
    background: #ffffff;
    border-radius: 38rpx;
    border: 1rpx solid;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.input-class {
    height: 100%;
    flex: 1;
    font-size: 24rpx;
    font-weight: 400;
    color: #1D2129;
    caret-color: #FE0201;
}

.searchInput .searchIcon {
    padding-right: 4px;
    width: 28rpx;
    height: 28rpx;
}

.searchInput {
    /* padding: 0 24rpx; */
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64rpx;
    background: #ffffff;
    border-radius: 38rpx;
    /* border: 1rpx solid; */
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.clearIcon {
    width: 64rpx;
    height: 64rpx;
    text-align: center;
    position: relative;
}

.clearIcon image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 32rpx;
    height: 32rpx;
}

.select {
    height: calc(100% - 24rpx);
    overflow: auto;
    padding-top: 24rpx;
    position: relative;
    z-index: 999;
}

.selectItem {
    display: flex;
    /* align-items: center; */
    flex-direction: column;
    padding: 10rpx 20rpx 16rpx 24rpx;
    /* flex-direction: column; */
    /* border-bottom: 1rpx solid #979797; */
    /* box-sizing: border-box;
    box-shadow: 0px 0px 0px 0.5px #979797 inset; */
    /* border-bottom: 1px solid transparent;
    border-image: linear-gradient(to bottom,transparent 50%,#979797 50%) 0 0 100% 0; */
}

.countent {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    line-height: 36rpx;
}

.postOrfirmTag {
    margin-left: 20rpx;
    width: 62rpx;
    height: 36rpx;
    border-radius: 6rpx;
    text-align: center;
}

.selectItem image {
    padding-right: 3px;
    width: 30rpx;
    height: 30rpx;
}

.postOrfirmTag text {
    /* width: 44rpx; */
    height: 32rpx;
    font-size: 22rpx;
    
    font-weight: 400;
    /* color: #FE0201; */
    line-height: 32rpx;
}

.cityIndex_main {
    padding: 0 40rpx;
    overflow: auto;
}

.currentLocation {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 40rpx;
}

.currentLocation .left {
    display: flex;
    align-items: center;
}

.currentLocation .left image {
    width: 22rpx;
    height: 26rpx;
    margin-top: 2rpx;
    margin-right: 16rpx;
}

.currentLocation .left text {
    font-size: 26rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #1D2129;
}

.currentLocation .right {
    display: flex;
    align-items: center;
}

.currentLocation .right image {
    width: 30rpx;
    height: 30rpx;
    margin-top: 2rpx;
}

.currentLocation .right text {
    font-size: 24rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #037AFF;
}

.historyAddress {
    width: 100%;
    background: #FFFFFF;
    border-radius: 8rpx;
    margin-top: 36rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.historyAddress .historyAddress_title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 36rpx;
}

.historyAddress .historyAddress_title .left {
    font-size: 28rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 500;
    color: #1D2129;
}

.historyAddress .historyAddress_title .right {
    font-size: 24rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 500;
    color: #999;
    display: flex;
    align-items: center;
}

.historyAddress_list {
    padding-top: 26rpx;
    position: relative;
}

.historyAddress_list .historyAddress_item {
    font-size: 24rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #1D2129;
    padding-bottom: 20rpx;
}

.historyAddress_list .notdata {
    width: 402rpx;
    height: 214rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.no_data {
    position: relative;
    width: 100%;

    height: 200px;
    /* margin-top: 5%; */
}

.no_data_center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no_data_img {
    width: 402rpx;
    height: 214rpx;
}

.no_data_text {
    font-size: 26rpx;
    
    font-weight: 400;
    color: #666666;
    margin-top: 8rpx;
}


.province {
    width: 100%;
    /* height: 630rpx; */
    background: #FFFFFF;
    border-radius: 8rpx;
    margin-top: 32rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.province .province_title {
    padding-top: 36rpx;
}

.province .province_title .left {
    font-size: 28rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 500;
    color: #1D2129;
}

.province .provinceList {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 26rpx 0;
}

.province .provinceList .provinceItem {
    height: 60rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    margin-right: 10rpx;
    margin-bottom: 12rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 24rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #1D2129;
    padding: 0 24rpx 0 26rpx;
}