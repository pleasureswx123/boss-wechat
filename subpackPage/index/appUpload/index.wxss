.left_top_text {
  /* width: 590rpx; */
  text-align: center;
  line-height: 80rpx;
  /* height: 50rpx; */
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  letter-spacing: 2px;
  width: calc(100vw - 84rpx);
}