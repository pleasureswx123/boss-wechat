page{
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.addressDetailBox{
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.addressDetailBox_main{
    height: calc(100% - 178rpx);
    width: 100%;
    overflow: hidden;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.addressTitle{
    padding: 0 32rpx;
    font-size: 32rpx;
    font-weight: 400;
}

.custom-class{
    border-bottom: 2rpx solid #f5f5f5;
    padding: 20rpx 32rpx;
    justify-content: space-between;
}

.input-class {
    height: 100%;
    flex: 1;
    /* font-size: 24rpx; */
    font-weight: 400;
    color: #1D2129;
    caret-color: #FE0201;
}

.footer {
    width: 100%;
    height: 178rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
    position: absolute;
    bottom: 0;
    left: 0;
}

.addBtn {
    margin-top: 32rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 96rpx);
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 36rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
}

.value-class{
  flex: initial !important;
}