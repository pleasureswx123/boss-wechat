page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.addressListBox {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.addressList {
  width: 100%;
  /* height: 100%; */
  /* height: calc(100% - 178rpx); */
  padding: 0 30rpx;
  overflow: auto;
  box-sizing: border-box;
  flex: 1;
}

.scrollBox {
  height: 100%;
}

.addressList .address-item {
  /* height: 242rpx; */
  background: #FFFFFF;
  border-radius: 12rpx;
  width: 100%;
  padding: 0 48rpx;
  box-sizing: border-box;
  /* position: relative; */
  margin-top: 24rpx;
}

.addressList .address-item .address_CardBack{
  position: absolute;
  right: -96rpx;
  top: -34rpx;
  width: 148rpx;
  height: 176rpx;
}

.addressList .address-item .address-item_top {
  padding: 40rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
  position: relative;
}

.address-item_top .item_top-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #333333;
}

.address-item_top .item_top-text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #666666;
}

.address-item_button {
  height: 70rpx;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  line-height: 70rpx;
}

.address-item_button .item_button-edit {
  display: flex;
  align-items: center;
  padding-right: 48rpx;
}

.address-item_button .item_button-edit image {
  width: 26rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-bottom: 4rpx;
}

.address-item_button .item_button-edit text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #333333;
}

.address-item_button .item_button-delete {
  display: flex;
  align-items: center;
}

.address-item_button .item_button-delete image {
  width: 24rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.address-item_button .item_button-delete text {
  font-weight: 400;
  font-size: 24rpx;
  color: #333333;
}

.custom-class {
  border-bottom: 2rpx solid #f5f5f5;
}

.van-cell_title {
  flex: 1;
}

.van-cell_label {}

.van-cell_btn {
  float: right;
  text-align: right;
}

.van-cell_btn .btn {
  display: flex;
  align-items: center;
}

.van-cell_btn .btn text {
  margin-left: 40rpx;
}

.footer {
  width: 100%;
  height: 178rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
}

.addBtn {
  margin-top: 32rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 96rpx);
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}


.pop_box {
  padding-top: 62rpx;
  width: 576rpx;
}

.pop_box_middle {
  padding-left: 50rpx;
  margin-bottom: 58rpx;
  text-align: center;
  font-size: 32rpx;

  font-weight: 400;
  color: #1D2129;
  letter-spacing: 2px;
}

.pop_box_bot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pop_box_bot_left,
.pop_box_bot_right {
  width: 49%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
}

.pop_box_bot {
  border-top: 1rpx solid #ededed;
  opacity: 0.9;
}

.pop_box_bot_left {
  border-right: 1rpx solid #ededed;
  font-size: 28rpx;

  font-weight: 400;
  color: #666666;
}

.pop_box_bot_right {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #037AFF;
}

.no_data {
  position: relative;
  width: 100%;
  height: 100%;
}

.no_data_center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_data_img {
  width: 402rpx;
  height: 214rpx;
}

.no_data_text {
  font-size: 26rpx;

  font-weight: 400;
  color: #666666;
  /* margin-bottom: 160rpx; */
  margin-top: 8rpx;
}

.value-class {
  flex: initial !important;
}