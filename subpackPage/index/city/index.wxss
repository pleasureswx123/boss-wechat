/* subpackPage/index/city/index.wxss */
page {
    height: 100%;
}

.city {
    height: 100%;
    background: #F5F5F5;
    display: flex;
    flex-direction: column;
}

.city_head{

}

.title {
    padding: 0 32rpx;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.title .headline {
    height: 50rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #1D2129;
    line-height: 50rpx;
    flex: 1;
    text-align: center;
    margin-right: 26px;
}

.gc_line {
    width: 100%;
    height: 1rpx;
    background-color: #979797;
    transform: scaleY(0.8);
    transform-origin: 50% 100%;
    /*为了防止线模糊*/
}

.presentDefault {
    margin-top: 42rpx;
}

.presentDefault text {
    width: 128rpx;
    height: 38rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 42rpx;

}

.presentCity {
    margin-top: 16rpx;
    /* width: 185rpx; */
    /* height: 63rpx; */
    background: rgba(254, 117, 117, 0.2);
    border-radius: 8rpx;
    border: 1rpx solid #F53939;
    text-align: center;
    line-height: 63rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #F32E2E;
}

.cltyList {
    display: flex;
    flex-wrap: wrap;
}

.presentCityItem {
    margin-right: 32rpx;
    margin-bottom: 16rpx;
    width: 185rpx;
    height: 63rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    text-align: center;
    line-height: 63rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
}

.van-index-bar__sidebar {
    padding: 42rpx 0 40rpx;
    width: 52rpx;
    /* height: 660rpx; */
    background: #D8D8D8 !important;
    border-radius: 42rpx;
    opacity: 0.6;
}

.van-index-bar__index {
    padding: 4rpx 16rpx !important;
}

.gcCity_List {
  flex: 1;
}

.gcCity_List .gcCity_List_box {
    display: flex;
    flex-direction: row;
    /* flex-wrap: nowrap; */
    /* justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start; */
    height: 100%;
}

.gcCity_List .gcCity_List_box .left {
    width: 260rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    height: 100%;
}
.gcCity_List .gcCity_List_box .left .left_scrollView{
  height: 100%;
}

.gcCity_List .gcCity_List_box .line{
  transform: scaleX(0.3); 
  transform-origin: 50% 100%; 
  background-color: #979797; 
  width: 2px; 
  opacity: 0.2;
  height: 100%;
}

.gcCity_List .gcCity_List_box .right{
  height: 100%;
  flex: 1;
  overflow: scroll;
}

.gcIndustry_list_item {
    padding-top: 40rpx;
}

.gcIndustry_name {
    display: inline-block;
    width: 212rpx;
    padding-left: 48rpx;
    height: 40rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.active {
    color: #FE0201;
}

/* 右边 */
.right {
    width: 488rpx;
}

.safeList {
    padding: 28rpx 28rpx 0 60rpx;
    margin-bottom: 32rpx;
}
.IndustryListHead {
    padding-bottom: 28rpx;
    height: 50rpx;
    font-size: 40rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #1D2129;
    line-height: 56rpx;
}

.IndustryList {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.IndustryList_itembg {
    min-width: 185rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    text-align: center;
    margin-bottom: 20rpx;
    color: #1D2129;
}

.activeCity {
    background: rgba(254, 117, 117, 0.2) !important;
    /* border: 1rpx solid #F53939; */
    font-weight: 500;
    color: #F32E2E !important;
}

.IndustryList_itembg text {
    padding: 10rpx 26rpx;
    display: inline-block;
    font-size: 22rpx;
    
    font-weight: 400;
    line-height: 46rpx;
}

.multipleItembg {
    display: flex;
    align-items: center;
    height: 62rpx;
    background: rgba(255, 197, 197, 0.4);
    border-radius: 40rpx;
    padding: 0 20rpx;
}

.multipleItembg .text {
    display: inline-block;
    font-size: 24rpx;
    
    font-weight: 400;
    color: #FE0201;
    line-height: 46rpx;
    text-align: center;
    padding-right: 16rpx;
}

.multipleItembg .padding0{
    padding: 0 10rpx;
}

.cityMultiple {
    height: 60rpx;
    width: 100%;
    display: flex;
    /* padding-bottom: 26rpx; */
    padding-top: 36rpx;
}

.selected {
    text-align: center;
    line-height: 60rpx;
    padding-right: 40rpx;
    width: 50px;
}

.selected text {
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
}

.multipleList {
    display: flex;
}

.multipleItem {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    margin-right: 20rpx;
}



.cityFliter {
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
    /* position: fixed;
    bottom: 0;
    left: 0;
    right: 0; */
    display: flex;
    flex-direction: column;
    padding: 0 48rpx;
    box-sizing: border-box;
}

.popup-button {
    padding: 32rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-align: center;
}

.reset {
    height: 80rpx;
    line-height: 80rpx;
    width: 180rpx;
    background: #F1F1F1;
    border-radius: 12rpx;
    font-size: 32rpx;
    
    font-weight: 400;
    color: #666666;
}

.comfirm {
    line-height: 80rpx;
    width: 456rpx;
    height: 80rpx;
    background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%);
    border-radius: 12rpx;
    font-size: 32rpx;
    
    font-weight: 400;
    color: #FFFFFF;
}

.selectedScroll {
    /* flex-shrink: 1; */
}

.disabled-text {
    color: #999;
}

.searchInputWarp {
    /* padding-bottom: 54rpx; */
    padding: 38rpx 32rpx;
}

.searchHeight{
    height: calc(100% - 76rpx - 30px);
}

.selectHeight{
    /* height: calc(100% - 24rpx - 68rpx); */
    height: 100%;
}


.input {
    display: flex;
    align-items: center;
    height: 68rpx;
    background: #ffffff;
    border-radius: 38rpx;
    border: 1rpx solid;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.input-class {
    height: 100%;
    flex: 1;
    font-size: 24rpx;
    font-weight: 400;
    color: #1D2129;
    caret-color:#FE0201;
}

.searchInput .searchIcon {
    padding-right: 4px;
    width: 28rpx;
    height: 28rpx;
}

.searchInput {
    /* padding: 0 24rpx; */
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 68rpx;
    background: #ffffff;
    border-radius: 38rpx;
    /* border: 1rpx solid; */
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.clearIcon{
    width: 68rpx;
    height: 68rpx;
    text-align: center;
    position: relative;
}
.clearIcon image{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 36rpx;
    height: 36rpx;
}

.input-placeholder {
    /* font-size: 26rpx; */
}

.select {
    height: calc(100% - 68rpx - 24rpx);
    overflow: auto;
    padding-top: 24rpx;
    position: relative;
    z-index: 999;
}

.selectItem {
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx 16rpx 24rpx;
}

.countent {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    line-height: 36rpx;
}

.postOrfirmTag {
    margin-left: 20rpx;
    width: 62rpx;
    height: 36rpx;
    border-radius: 6rpx;

    text-align: center;
}

.postOrfirmTag text {
    /* width: 44rpx; */
    height: 32rpx;
    font-size: 22rpx;
    
    font-weight: 400;
    /* color: #FE0201; */
    line-height: 32rpx;
}

.post {
    border: 1rpx solid #FE0201;
    color: #FE0201;
}

.firm {
    border: 1rpx solid #23C61B;
    color: #2FCC28;
}

.line {
    /* width: 90%; */
    /* padding: 0 24rpx; */
    height: 1px;
    opacity: 0.2;
    border-bottom: 1px solid transparent;
    border-image: linear-gradient(to bottom, transparent 50%, #979797 50%) 0 0 100% 0;
}

.selectItem image {
    padding-right: 3px;
    width: 30rpx;
    height: 30rpx;
}