/* subpackPage/index/addressMap/index.wxss */
page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.addressMapBox {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.addressMapMain {
    /* height: 100%; */
    height: calc(100% - 178rpx);
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.searchWarp{
    height: 100% !important;
    margin-bottom: 0 !important;
}

.searchMargin{
    margin: 0 !important;
}

.selectHeight {
    height: 100%;
    width: 100%;
}

.select {
    height: calc(100% - 24rpx - 64rpx);
    overflow: auto;
    padding-top: 24rpx;
    position: relative;
    z-index: 999;
}

.selectItem {
    display: flex;
    /* align-items: center; */
    flex-direction: column;
    padding: 10rpx 20rpx 16rpx 24rpx;
    /* flex-direction: column; */
    /* border-bottom: 1rpx solid #979797; */
    /* box-sizing: border-box;
    box-shadow: 0px 0px 0px 0.5px #979797 inset; */
    /* border-bottom: 1px solid transparent;
    border-image: linear-gradient(to bottom,transparent 50%,#979797 50%) 0 0 100% 0; */
}

.countent {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    line-height: 36rpx;
}

.postOrfirmTag {
    margin-left: 20rpx;
    width: 62rpx;
    height: 36rpx;
    border-radius: 6rpx;
    text-align: center;
}

.selectItem image {
    padding-right: 3px;
    width: 30rpx;
    height: 30rpx;
}


.input {
    display: flex;
    align-items: center;
    height: 64rpx;
    background: #ffffff;
    border-radius: 38rpx;
    border: 1rpx solid;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.input-class {
    height: 100%;
    flex: 1;
    font-size: 24rpx;
    font-weight: 400;
    color: #1D2129;
    caret-color: #FE0201;
}

.searchInput .searchIcon {
    padding-right: 4px;
    width: 28rpx;
    height: 28rpx;
}

.searchInput {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64rpx;
    background: #f5f5f5;
    border-radius: 38rpx;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
    /* margin-bottom: 26rpx; */
}

.map {
    width: 100%;
    height: 398rpx;
    margin-bottom: 38rpx;
    position: relative;
}

.map .mapContent {
    height: 100%;
    width: 100%;
}


.map image {
    width: 34px;
    height: 34px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.nearbyAddress {
    width: 100%;
    /* overflow: auto; */
}

.nearbyAddress .nearbyAddress_title {
    font-size: 32rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 600;
    color: #1D2129;
}

.nearbyAddress .nearbyAddress_list {
    height: calc(100% - 32rpx - 18rpx);
    width: 100%;
    overflow: auto;
}

.nearbyAddress .nearbyAddress_list .nearbyAddress_item {
    width: 100%;
    padding: 18rpx 0;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.nearbyAddress .nearbyAddress_list .nearbyAddress_item .left {
    width: 90%;
}

.nearbyAddress .nearbyAddress_list .nearbyAddress_item .right {
    /* width: 50rpx; */
}

.address_name {
    font-size: 32rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #1D2129;
}

.active {
    color: #FE0201;
}

.address_details {
    font-size: 24rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #999999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


.footer {
    width: 100%;
    height: 178rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
    position: absolute;
    bottom: 0;
    left: 0;
}

.addBtn {
    margin-top: 32rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 96rpx);
    height: 80rpx;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 36rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
}


.clearIcon {
    width: 64rpx;
    height: 64rpx;
    text-align: center;
    position: relative;
}

.clearIcon image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 32rpx;
    height: 32rpx;
}