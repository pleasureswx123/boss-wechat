.lufei {
  background: #FDE7E6;
  height: 47rpx;
  /* line-height: 24px; */
  display: flex;
  align-items: center;
  margin-right: 6px;
  margin-bottom: 6rpx;
  padding: 1px 12rpx;
  border-radius: 8rpx;
}

.lufei image {
  width: 34rpx;
  height: 28rpx;
  margin-right: 8rpx;
  margin-top: -2rpx;
  animation-name: car-scale;
  animation-duration: 6s;
  animation-iteration-count: infinite;
}
@keyframes car-scale {
  0% {transform: scale(0.8); }
  25% {transform: scale(1); }
  50% { transform: scale(0.8); }
  75% {transform: scale(1); }
  100% { transform: scale(1); }
}

.lufei .text {
  font-weight: 600;
  font-size: 22rpx;
  color: #666666;
  background: linear-gradient(217deg, #FF7C44 10%, #FE0000 93%, #FF6E67 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hb {
  flex: 1;
  margin: 4rpx 12rpx;
  display: inline-flex;
}

.hongICon {
  object-fit: contain;
  vertical-align: middle;
  width: 30rpx;
  height: 34rpx;
  /* margin-left: 8rpx; */
  margin-bottom: 6rpx;
  animation: shake1 1.5s linear infinite;

  /* text-align: center */
}

@keyframes shake1 {
  0% {
    transform: rotate(0deg);
  }

  25% {
    transform: rotate(15deg);
  }

  50% {
    transform: rotate(0deg);
  }

  75% {
    transform: rotate(-15deg);
  }

  100% {
    transform: rotate(0deg);
  }
}

