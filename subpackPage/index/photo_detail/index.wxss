page {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

#photo_detail {
    height: 100%;
    background: #ffffff;
    padding: 0 48rpx;
    overflow: hidden;
}

.content_title {
    text-align: center;
    padding-bottom: 54rpx;
}

