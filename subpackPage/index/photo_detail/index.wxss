.content_title text:nth-child(2) {}

.text {
    height: 36rpx;
    font-size: 30rpx;
    
    font-weight: 400;
    color: #999999;
    line-height: 42rpx;
}

.text:nth-child(1) {
    padding-right: 88rpx;
}

.list {
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    /* justify-content: space-between; */
}

.videoList{
    width: 750rpx;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
}
.imagesList{
    width: 100%;
    height: 100%;
    /* display: flex;
    flex-wrap: wrap; */
    display: grid;
    grid-template-columns: repeat(3, 1fr);
}

.item image {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    border-radius: 6rpx;
}

.play {
    width: 72rpx;
    height: 72rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 999;
    opacity: 1;
    transform: translateX(-50%) translateY(-50%);
}

.active {
    font-weight: 500 !important;
    color: #1D2129 !important;
}

.videoItem {
    height: 200rpx;
    width: 200rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.custom-tab{
  height: 100%;
}

.tab-class{
  height: 100%;
}

.van-tabs__content{
  height: calc(100% - 64px);
  overflow: auto !important;
}

.wrap-class{
  padding-bottom: 20px;
}

.nav-class .van-tabs__line{
  width: 20px !important;
  height: 2px !important;
  border-radius: 2px !important;
}