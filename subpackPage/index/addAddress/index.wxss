/* subpackPage/index/addAddress/index.wxss */
/* 搜索输入框 */
page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.addAddress {
  height: 100%;
  width: 100%;
  background: #F5F5F5;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.addAddress-content{
  flex: 1;
  overflow: auto;
}

.addressTitle {
  padding: 64rpx 0 10rpx 0;
  height: 68rpx;
  font-size: 56rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1D2129;
  line-height: 80rpx;
}

.addressDetail {
  height: 72rpx;
  font-size: 22rpx;

  font-weight: 400;
  color: #666666;
  line-height: 32rpx;
  padding-bottom: 40rpx;
}

.searchInput {
  display: flex;
  align-items: center;
  height: 68rpx;
  background: #fff;
  border-radius: 38rpx;
  border: 1rpx solid;
  border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
  backdrop-filter: blur(8px);
}

.left {
  display: flex;
  padding: 16rpx 16rpx 16rpx 36rpx;
  height: 36rpx;
  font-size: 26rpx;

  font-weight: 400;
  line-height: 36rpx;
}

.right {
  display: flex;
  margin-left: 28rpx;
}

.right .input {
  font-weight: 400;
  font-size: 26rpx;
  opacity: 0.4;
  color: #fff;
}

.select {
  padding-top: 24rpx;
  /* height: calc(100vh - 150rpx); */
}

.selectItem {
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx 16rpx 24rpx;
}

.countent {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  height: 36rpx;
  font-size: 26rpx;

  font-weight: 400;
  line-height: 36rpx;
}

.scroll {
  height: calc(100vh - 282rpx);
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}