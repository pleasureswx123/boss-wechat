/* subpackPage/index/setAddress/index.wxss */
page {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

#setAddress {
    height: 100%;
    width: 100%;
    overflow: hidden;
    background: #FFFFFF;
    padding: 0 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

/* 搜索输入框 */
.searchInput {
    /* margin-top: 26rpx; */
    display: flex;
    align-items: center;
    height: 68rpx;
    background: #F5F5F5;
    border-radius: 38rpx;
    border: 1rpx solid;
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
}

.left {
    display: flex;
    padding: 16rpx 16rpx 16rpx 36rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    line-height: 36rpx;
}

.right {
    display: flex;
    /* margin-left: 28rpx; */
    height: 100%;
    flex: 1;
    align-items: center;
}

.right image {
    padding-right: 4px;
    width: 28rpx;
    height: 28rpx;

}

.right .input {
    font-weight: 400;
    font-size: 26rpx;
    opacity: 0.4;
    color: #999999;
}

.location {
    width: 78rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #999999;
    line-height: 36rpx;
    opacity: 0.8;
    margin-right: 16rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-clamp: 2;
    -webkit-line-clamp: 1;
}

/* 位置信息 */
.locationInfo {
    padding-top: 74rpx;
    /* width: 118rpx; */
    height: 36rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 42rpx;
}

/* 地址列表 */
.locationList {
  flex: 1;
  position: relative;
}

/* 没有设置地址展示 */
.notAvailable {
    width: 402rpx;
    height: 214rpx;
    text-align: center;
    position: absolute;
    top: calc(50% - 74rpx - 30rpx);
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.notAvailable text {
    display: inline-block;
    padding-top: 8rpx;
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #999999;
    line-height: 36rpx;
}

/* 地址 */
.addressList {
    padding-top: 28rpx;
}

.addressItem {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.addressItem image {
    width: 26rpx;
    height: 26rpx;
}

.addressItem view {
    height: 36rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #FE0201;
    line-height: 36rpx;
}