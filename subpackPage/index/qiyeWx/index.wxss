/* subpackPage/index/qiyeWx/index.wxss */
page {
  background: #fff;
  overflow: hidden;
  height: 100vh;
  width: 100vw;
}

.qiye-wx {
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.qiye-wx-bg {
  width: 100%;
  line-height: 0;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.07);
  position: relative;
}

.btns {
  width: 100%;
  /* margin: 108rpx auto 100rpx; */
  margin: 58rpx auto 50rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: flex-start;
}

.btn {
  flex-shrink: 0;
  width: 330rpx;
  height: 110rpx;
  /* background-image: linear-gradient(#FC3280, #FB0000); */
  background-image: url(https://imgcdn.guochuanyoupin.com/resource/wechat/baseimages/btn2_img.png);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0rpx 2rpx;
  color: #fff;
  position: relative;
  border-radius: 44rpx;
  overflow: hidden;

  text-align: center;
  line-height: 90rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 600;
  font-size: 32rpx;
  color: #FFFFFF;
  font-style: normal;
}

.btn1 {
  /* background-image: linear-gradient(-45deg, #FF771B, #FFC26A); */
  background-image: url(https://imgcdn.guochuanyoupin.com/resource/wechat/baseimages/btn1_img.png);
}

.qiye-face {
  width: 220rpx;
  height: 206rpx;
  position: absolute;
  left: 50%;
  top: -100rpx;
  transform: translateX(-50%) ;
  /* left: 50%; */
  /* transform: translateX(-50%); */
}

.qw-btn {
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wrapper {
  /* width: 100%;
  height: 100%; */
}

.ocean-wrapper {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
}

.qiye-wx-container {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.qiye-wx_bg{
  /* position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0; */
  position: relative;
  width: calc(100% + 2rpx);
}

/* 头部区域 */
.qiye-wx-container_header {}

/* 自定义导航栏 */
.indexBox_head .banner {
  position: relative;
  padding-bottom: 10rpx;
}

.indexBox_head .backIcon {
  background-size: cover;
  background-position: center -100%;
  width: 100vw;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  z-index: 999;
  padding-bottom: 10rpx;
}

.topNav {
  transition: top 0.3s ease;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.topNav_left {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}

/* 内容区域 */
.qiye-wx-container_content {
  flex: 1;
  overflow: hidden;
  position: relative;
}

/* 底部区域 */
.qiye-wx-container_footer {
  width: 750rpx;
  /* height: 350rpx; */
  background: #FFFFFF;
  flex-shrink: 0;
  position: relative;
  /* position: fixed;
  bottom: 0;
  left: 0; */
}