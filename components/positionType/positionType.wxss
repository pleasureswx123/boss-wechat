.box {
    background-color: #fff;
}

.top_input {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 670rpx;
    height: 68rpx;
    line-height: 68rpx;
    background: #F5F5F5;
    border-radius: 38rpx;
    /* border: 1rpx solid; */
    border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
    backdrop-filter: blur(8px);
    margin-bottom: 20rpx;
}

.top_input input {
    width: 670rpx;
    height: 68rpx;
    line-height: 68rpx;
    padding-left: 64rpx;
    box-sizing: border-box;
}

.icons {
    position: absolute;
    left: 28rpx;
    top: 50%;
    transform: translateY(-50%);
}

.all_line {
    width: 750rpx;
    height: 1rpx;
    background-color: #979797;
    transform: scaleY(0.3);
    transform-origin: 50% 100%;
    /*为了防止线模糊*/
}

.middle_line {
    width: 1rpx;
    background-color: #979797;
    transform: scaleX(0.1);
    transform-origin: 50% 100%;
    /*为了防止线模糊*/
}

.bot_box {
    display: flex;
    align-items: center;
}

.left_scroll {
    width: 280rpx;
}

.list_item {
    padding-left: 48rpx;
    margin-top: 60rpx;
    font-size: 28rpx;
    
    font-weight: 400;
    color: #1D2129;
    box-sizing: border-box;
}

.selected {
    color: #FE0201 !important;
}

.xqName {
    color: #1D2129;
    font-size: 40rpx;
    height: 106rpx;
    display: flex;
    align-items: center;
}

.right_scroll {
    flex: 1;
    padding: 28rpx 0 0rpx 28rpx;
}

.sitemBox {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.sitem {
    width: 185rpx;
    height: 63rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    margin-bottom: 28rpx;
    margin-right: 30rpx;
    font-size: 22rpx;
    color: #1D2129;
    align-items: center;
    justify-content: center;
    display: flex;
}

.closeIcon {
    position: absolute;
    right: 40rpx;
    top: 42rpx;
}

.closeIcon image {
    width: 34rpx;
    height: 34rpx;
}

.top_title {
    /* height: 158rpx; */
    position: relative;
    width: 100%;
    text-align: center;
    border-bottom: 2rpx solid #f5f5f5;
}

.top_title text {
    display: inline-block;
    height: 58rpx;
    font-size: 44rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #1D2129;
    margin-top: 54rpx;
    margin-bottom: 40rpx;
}