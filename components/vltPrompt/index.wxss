
.popupcontact{
  min-height: 550rpx;
  background: #fff;
  /* background: linear-gradient( 269deg, #FFF1DE 0%, #FFF8F8 51%, #FFEAEA 100%), linear-gradient( 180deg, #FFFFFF 0%, rgba(253,253,253,0) 100%); */
}
.topBg{
  width: 100%;
  height: 356rpx;
  position: absolute;
  top:0;
  left: 0;
}
.topBg image{
  width: 100%;
  height: 100%;
}
.contactTitle{
  margin:0 48rpx;
  position: relative;
  z-index: 100;
}
.titFont1{
  font-size: 44rpx;
  color: #1D2129;
  font-weight: 600;
  padding-top: 62rpx;
}
.titFont2{
  font-weight: 400;
  font-size: 26rpx;
  color: #1D2129;
  width: 460rpx;
}
.contactCont{
  margin: 40rpx 48rpx 70rpx;
  position: relative;
}
.simage1{
  height: 158rpx;
  width: 654rpx;
  position: absolute;
  top:0;
  z-index: 2;
  backdrop-filter: blur(5px);
}
.bigName1{
  font-weight: 500;
  font-size: 36rpx;
  color: #1D2129;
}
.bigCont1{
  font-weight: 400;
  font-size: 26rpx;
  color: #666666;
}
.litem{
  width: 598rpx;
  height: 70rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  font-weight: 400;
  font-size: 30rpx;
  color: #1D2129;
  line-height: 42rpx;
  margin:0 auto;
  margin-top: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tipCont{
  font-weight: 400;
  font-size: 26rpx;
  color: #1D2129;
  line-height: 42rpx;
  margin: 0 40rpx;
}
.litemList{
  padding-top: 5rpx;
  position: relative;
  z-index: 3;
}
.iconImage{
  width: 254rpx;
  height: 246rpx;
  position: absolute;
  right: 0rpx;top:56rpx;z-index: 1;
}
.sclose{
  width: 30rpx;
  height: 30rpx;
  border-radius: 0;
  position:absolute;
  right: 30rpx;
  top: 0;
}
.scloseItem{
  right: 0;
  top:20px;
  position: absolute;
  width: 80rpx;
  height: 70rpx;
}
.itemPhone{
  display: flex;
  justify-content:space-between;
  margin: 20rpx 40rpx 20rpx;
}
.editBtn{
  font-weight: 500;
  font-size: 30rpx;
  color: #666666;
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 40rpx;
  top:30rpx;
}
.totalNum{
  width: 112rpx;
  height: 40rpx;
  background: #FFD1D1;
  border-radius: 22rpx;
  font-weight: 400;
  font-size: 24rpx;
  color: #FE0201;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}
.phoneBtns{
  display: flex;
  justify-content: center;
  padding:34rpx 48rpx 60rpx 24rpx;
}
.cancelBtn{
  width: 180rpx;
  height: 80rpx;
  background: #F1F1F1;
  border-radius: 12rpx;
  font-weight: 400;
  font-size: 36rpx;
  color: #666666;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 24rpx;
}
.openBtn{
  min-width: 452rpx;
  flex: 1;
  height: 80rpx;
  background: linear-gradient( 270deg, #FF7979 0%, #F32E2E 100%);
  border-radius: 12rpx;
  font-weight: 500;
  font-size: 36rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 22rpx;
}