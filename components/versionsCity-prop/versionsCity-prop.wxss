/* subpackPage/index/city/index.wxss */
page {
  height: 100%;

}

.city {
  height: 100%;
  background: #F5F5F5;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.title {
  padding: 32rpx 32rpx 54rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title .headline {
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1D2129;
  line-height: 50rpx;
  flex: 1;
  text-align: center;
  margin-right: 26px;
}

.gc_line {
  width: 100%;
  height: 1rpx;
  background-color: #979797;
  transform: scaleY(0.8);
  transform-origin: 50% 100%;
  /*为了防止线模糊*/
}

.presentDefault {
  margin-top: 42rpx;
}

.presentDefault text {
  width: 128rpx;
  height: 38rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #1D2129;
  line-height: 42rpx;

}

.presentCity {
  margin-top: 16rpx;
  /* width: 185rpx; */
  /* height: 63rpx; */
  background: rgba(254, 117, 117, 0.2);
  border-radius: 8rpx;
  border: 1rpx solid #F53939;
  text-align: center;
  line-height: 63rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #F32E2E;
}

.cltyList {
  display: flex;
  flex-wrap: wrap;
}

.presentCityItem {
  margin-right: 32rpx;
  margin-bottom: 16rpx;
  width: 185rpx;
  height: 63rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  text-align: center;
  line-height: 63rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
}

.van-index-bar__sidebar {
  padding: 42rpx 0 40rpx;
  width: 52rpx;
  /* height: 660rpx; */
  background: #D8D8D8 !important;
  border-radius: 42rpx;
  opacity: 0.6;
}

.van-index-bar__index {
  padding: 4rpx 16rpx !important;
}

.gcCity_List {
  flex: 1;
  overflow: hidden;
}

.gcCity_List .gcCity_List_box {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  height: 100%;
}

.gcCity_List_box .left {
  width: 248rpx;
  height: 100%;
  line-height: 90rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.gcIndustry_list_item {
  padding-top: 40rpx;
}

.gcIndustry_name {
  display: inline-block;
  width: 212rpx;
  padding-left: 48rpx;
  height: 40rpx;
  font-size: 28rpx;

  font-weight: 400;
  color: #1D2129;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.active {
  color: #FE0201;
}

/* 右边 */
.gcCity_List_box .right {
  /* width: 488rpx; */
  height: 100%;
  flex: 1;
}

.safeList {
  padding: 28rpx 28rpx 0 60rpx;
  margin-bottom: 32rpx;
}

.IndustryListHead {
  padding-bottom: 28rpx;
  height: 50rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1D2129;
  line-height: 56rpx;
}

.IndustryList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.IndustryList_itembg {
  width: 185rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 20rpx;
  color: #1D2129;
}

.activeCity {
  background: rgba(254, 117, 117, 0.2) !important;
  /* border: 1rpx solid #F53939; */
  font-weight: 500;
  color: #F32E2E !important;
}

.IndustryList_itembg text {
  padding: 10rpx 26rpx;
  display: inline-block;
  font-size: 22rpx;

  font-weight: 400;
  line-height: 46rpx;
}

.multipleItembg {
  display: flex;
  align-items: center;
  height: 62rpx;
  background: rgba(255, 197, 197, 0.4);
  border-radius: 40rpx;
  padding: 0 20rpx;
}

.multipleItembg text {
  display: inline-block;
  font-size: 24rpx;

  font-weight: 400;
  color: #FE0201;
  line-height: 46rpx;
  text-align: center;
  padding-right: 16rpx;
}

.cityMultiple {
  height: 60rpx;
  width: 100%;
  display: flex;
  /* padding-bottom: 26rpx; */
  padding-top: 26rpx;
}

.selected {
  text-align: center;
  line-height: 60rpx;
  padding-right: 40rpx;
  width: 50px;
}

.selected text {
  font-size: 28rpx;

  font-weight: 400;
  color: #1D2129;
}

.multipleList {
  display: flex;
}

.multipleItem {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}



.cityFliter {
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.popup-button {
  padding-top: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  margin-bottom: 30rpx;
}

.reset {
  height: 80rpx;
  line-height: 80rpx;
  width: 180rpx;
  background: #F1F1F1;
  border-radius: 12rpx;
  font-size: 32rpx;

  font-weight: 400;
  color: #666666;
}

.comfirm {
  line-height: 80rpx;
  width: 456rpx;
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  font-size: 32rpx;

  font-weight: 400;
  color: #FFFFFF;
}

.selectedScroll {
  /* flex-shrink: 1; */
}

.disabled-text {
  color: #999;
}