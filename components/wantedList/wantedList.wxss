/* components/infomationList/infomationList.wxss */
.item {
    border-radius: 16rpx;
    backdrop-filter: blur(10px);
    padding: 20rpx 32rpx 0 36rpx;
    box-sizing: border-box;
    margin-bottom: 10px;
    background: #FFFFFF;
    border-image: linear-gradient(139deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0.92)) 2 2;
}

.hotBack {
    background: linear-gradient(180deg, #FFE0DA 0%, #FFFFFF 100%);
    border-image: linear-gradient(302deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 1)) 2 2;
}

.title {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.name {
    height: 52rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 50rpx;
    display: flex;
    align-items: center;
    flex: 1;
    width: 0;
}

.name span{
  /* width: calc(100% - 100rpx); */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.position {
    display: inline-block;
    padding: 3px 10rpx 1px 12rpx;
    opacity: 1;
    height: 32rpx;
    background: linear-gradient(244deg, #FAA7A7 0%, #FE0201 100%);
    border-radius: 16rpx 2rpx 16rpx 2rpx;
    font-size: 18rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 26rpx;
    text-align: center;
    margin-right: 24rpx;
}

.hongICon {
    vertical-align: middle;
    margin-left: 5px;
    width: 33rpx;
    height: 33rpx;
}


.compensation {
    height: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #999999;
    line-height: 44rpx;
}
.font28{
  font-size: 28rpx !important;
}

.introduce {
    line-height: 24px;
    margin: 16rpx 0 10rpx;
}

.span {
    padding-right: 10px;
    width: 363rpx;
    height: 43rpx;
    font-size: 26rpx;
    
    font-weight: 400;
    color: #666666;
    line-height: 36rpx;
}

.category {
    display: flex;
    flex-wrap: wrap;
    line-height: 24px;
    height: 25px;
    overflow: hidden;
}

.tag {
    padding: 1px 6px;
    height: 47rpx;
    background: #f1f1f1;
    border-radius: 8rpx;
    /* opacity: 0.6; */
    margin-right: 20rpx;
    text-align: center;
    margin-bottom: 6rpx;

    /* padding: 1px 3px; */
    font-size: 22rpx;
    
    font-weight: 400;
    color: #666666;
    line-height: 47rpx;
    text-align: center;
}



.footer {
    display: flex;
    justify-content: space-between;
    padding-top: 20rpx;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    border-top: 2rpx solid #f5f5f5;
    align-items: center;
}

.header {
    line-height: 24px;
    font-size: 20rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 26rpx;
}

.headTop {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.headerIcon {
    width: 18px;
    height: 18px;
    border-radius: 100%;
    background: #f2f2f2;
    vertical-align: middle;
    margin-right: 8px;
}

.distance {
    font-size: 18rpx;
    
    font-weight: 400;
    color: #666666;
    line-height: 26rpx;
}

.awaitsign {
    font-size: 18rpx;
    font-weight: 400;
    color: #999999;
    background: #E5E5E5;
    border-radius: 4rpx;
    min-width: 66rpx;
    padding: 0 5rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    margin-left: 8rpx;
    margin-right: 8rpx;
}

.await {
    color: #FE5100 !important;
    background: #FFEDE4 !important;
}

.await_ok {
    color: #FE0201 !important;
    background: #FFE6E6 !important;
}

.ok {
    color: #56C939 !important;
    background: #E3FFE6 !important;
}

.qiandao_btn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    border-top: 1px solid #dbdbdb;
}

.qiandao_btn text {
    font-size: 24rpx;
    
    font-weight: 400;
    color: #999999;
}

._btn {
    font-size: 18rpx;
    
    font-weight: 400;
    color: #FE0201;
    width: 108rpx;
    height: 42rpx;
    background: #FFE6E6;
    border-radius: 22rpx;
    border: 1rpx solid #FE0201;
    line-height: 42rpx;
    text-align: center;
}

