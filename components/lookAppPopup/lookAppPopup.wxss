.lookAppPopupBox {
  height: 100%;
  background: #000000;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}


.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
}

.nav-bar .search {
  color: #1D2129;
  position: absolute;
  display: flex;
  align-items: center;
}

.lookAppPopupBox-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.content-top {
  /* height: ; */
  display: flex;
  justify-content: center;
  padding-top: 50rpx;
}

