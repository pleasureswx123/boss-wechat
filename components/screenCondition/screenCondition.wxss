/* components/screenCondition/screenCondition.wxss */
.screenCondition {
    padding: 0 20rpx 0 18rpx;
}

.shaixuan {
    text-align: center;
    height: 98rpx;
    /* margin: 0 auto; */
    background: #fff;
    font-size: 44rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 98rpx;
    padding-top: 22rpx;
    border-radius: 24rpx;
    margin-left: -20rpx;
    z-index: 1000;
}


.shaixuanText {
    display: inline-block;
    /* margin-left: 600rpx; */
}

.closeIcon {
    width: 98rpx;
    position: absolute;
    height: 98rpx;
    right: 16rpx;
    /* 16rpx */
    top:10rpx;
}

.shaixuan image {
    width: 34rpx;
    height: 34rpx;
}

.icon {
    text-align: left;
}

.title {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang SC-Bold, PingFang SC;
    font-weight: bold;
    color: #1D2129;
    line-height: 33rpx;
    padding-left: 18rpx;
    box-sizing: border-box;
}

.screenList {
    padding-top: 16rpx;
    display: flex;
    margin-left: 14rpx;
    /* justify-content: space-between; */
    /* justify-content: space-around; */
    flex-wrap: wrap;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
}

.textColor {
    border-radius: 14rpx;
    display: flex;
    justify-content: space-between;
    width: 224rpx;
    display: inline-block;
    background: #F6F6F6;
    color: #1D2129;
    height: 62rpx;
    line-height: 62rpx;
    text-align: center;
    margin-bottom: 20rpx;
    font-size: 24rpx;
    font-family: PingFang SC-Medium, PingFang SC;
    /* display: grid;
    grid-template-columns: repeat(3, 1fr); */
    /* margin-right: 20rpx; */
    position: relative;
}

.more {
    color: #FE0201 !important;
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFang SC-Medium, PingFang SC;
    font-weight: 500;
    /* color: #2E718F; */
    line-height: 28rpx;
    margin-right: 10px;
}

