.textNo{
    font-size: 24rpx;
    
    font-weight: 400;
    color: #FE0201;
    overflow: hidden;
    border-radius: 0;
}
.textNo::after { 
    border-radius: 14rpx;
    /* background: rgba(244, 79, 79, 0.1); */
    background-color: rgba(244, 79, 79, 0.1);
    content: '';
    position: absolute;  /* 把父视图设置为relative，方便定位*/
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    box-sizing: border-box;
    border: 1px solid #F44F4F;
  }

.popup-button {
    background-color: #FFFFFF;
    height: 130rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx 38rpx 0;
}

.button_screen {
    height: 130rpx;
    padding: 0 38rpx;
    text-align: center;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.reset {
    background-color: #f1f1f1;
    color: #666666;
    font-size: 36rpx;
    border-radius: 10rpx;
    height: 80rpx;
    width: 210rpx;
    line-height: 80rpx;
}

.comfirm {
    border-radius: 14rpx;
    height: 80rpx;
    width: 447rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    font-weight: 400;
    color: #fff !important;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 12rpx;
}