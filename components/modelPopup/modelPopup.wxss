/* components/modelPopup/modelPopup.wxss */
.pop_box {
  padding-top: 62rpx;
  width: 570rpx;
  padding:62rpx 20rpx 0;
  /* width: 750rpx; */
  min-height: 100rpx;
}

.pop_box_middle {
  margin-bottom: 58rpx;
  text-align: justify;
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  letter-spacing: 2px;
  padding: 0 50rpx;
}

.pop_box_bot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pop_box_bot_left,
.pop_box_bot_right {
  width: 49%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
}

.pop_box_bot {
  border-top: 1rpx solid #ededed;
  opacity: 0.9;
}

.pop_box_bot_left {
  border-right: 1rpx solid #ededed;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}

.pop_box_bot_right {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #037AFF;
}