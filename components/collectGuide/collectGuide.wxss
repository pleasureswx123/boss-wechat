.collectGuideBox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.collectGuideBox-main {
  height: 100%;
  width: 100%;
  position: relative;
}


.content {
  position: absolute;
  right: 52rpx;
  /* right: 36rpx; */
  width: 442rpx;
  height: 723rpx;
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 32rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.beforeIcon{
  position: absolute;
  top: -44rpx;
  width: 112rpx;
  height: 46rpx;
  right: 56rpx;
}

