.gcIndustry_list .gcIndustry_list-box {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  height: 100%;
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}



.left {
  width: 260rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  height: 100%;
}

.gcIndustry_list_item {
  border-right: 2rpx solid #EAEAEA;
  display: flex;
  align-items: center;
  cursor: pointer;
}


.gcIndustry_name {
  padding: 20rpx 0;
  display: inline-block;
  width: 212rpx;
  padding-left: 48rpx;
  font-size: 28rpx;
  
  font-weight: 400;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}

.active {
  color: #FE0201 !important;
  background: #fff !important;
  border-right: 0rpx solid #EAEAEA;
  border-bottom: 2rpx solid #EAEAEA;
}

.right {
  width: 488rpx;
  background: #fff;
  height: 100%;
}

.safeList {
  padding: 28rpx 28rpx 0 60rpx;
  margin-bottom: 32rpx;
}

.IndustryListHead {
  padding-bottom: 28rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1D2129;
  line-height: 56rpx;
}
.closeIcon {
  position: absolute;
  right: 40rpx;
  top: 42rpx;
}

.closeIcon image {
  width: 34rpx;
  height: 34rpx;
}
.IndustryList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.IndustryList_item {
  margin-bottom: 28rpx;
}

.IndustryList_itembg {
  width: 185rpx;
  height: 63rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  text-align: center;
}

.IndustryList_itembg text {
  padding: 0 10rpx;
  width: 165rpx;
  display: inline-block;
  font-size: 22rpx;
  
  font-weight: 400;
  color: #1D2129;
  line-height: 63rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.allSpan{
    width: 165rpx;
    display: inline-block;
    font-size: 24rpx;
    font-weight: 400;
    color: #1D2129;
    line-height: 63rpx;
    position: absolute;
    left: 20px;
    top:30rpx;
    height: 30px;
    background: #f5f5f5;
    text-align: center;
    border-radius: 5rpx;
}