/* subpackPage/user/industry/index.wxss */

page {
  height: 100%;
  overflow: hidden;
  background-color: #f5f5f5;
}

.searchInput{
  border: none !important;
}
.height-class{
  border: none !important;
}

.leftScroll ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.gcIndustry {
  height: 100%;
  background: #F5F5F5;
}

.gcIndustry .gcIndustry_search {
  height: 68rpx;
  background: #F5F5F5;
  border-radius: 38rpx;
  /* border: 1rpx solid; */
  border-image: linear-gradient(141deg, rgba(255, 255, 255, 0.49), rgba(255, 255, 255, 0.22)) 1 1;
  backdrop-filter: blur(8px);
  padding: 20rpx 32rpx 28rpx;
}

