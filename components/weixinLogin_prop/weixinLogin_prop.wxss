/* components/weixinLogin_prop/weixinLogin_prop.wxss */


.weixin_login{
    padding: 0 40rpx;
}

.title{
    line-height: 130rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #1D2129;
}

.agreement{
    padding: 0 0 72rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    
    font-weight: 400;
    color: #666666;
}

.yuandian{
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border: 2rpx solid #000;
    margin-right: 10rpx;
}

.text{
    font-size: 28rpx;
    /* color: #f5f5f5; */
}

.weixin_loginButton{
    height: 80rpx;
    font-size: 40rpx;
    font-weight: 500;
    /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
    background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
    border-radius: 16rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    color: #FFFFFF;
}
.red{
    color: #FE0201;
}
/* 设置checkbox的图标样式 */
.checkbox-icon {
    width: 22rpx;
    height: 22rpx;
    border: 1px solid #999;
    border-radius: 50%;
    margin-right: 16rpx;
    position: relative;
    top: 8rpx; 
    display: flex;
    flex-shrink: 0;
  }
  
  /* 设置checkbox选中状态的样式 */
 .checked_active{
     margin-right: 16rpx;
     background-color: #FE0201;
     width: 22rpx;
     height: 22rpx;
     border: 1px solid #FE0201;
     border-radius: 50%;
     position: relative;
     top: 8rpx;
     display: flex;
     flex-shrink: 0;
 }
 .checked_active image{
     width: 18rpx;
     height: 14rpx;
     margin: 0 auto;
     position: relative;
     top: 5rpx;
     left: 0rpx;
 }
  .check{
      padding: 0 70rpx 0 30rpx;
      display: flex;
  }
  .check view{
    font-size: 24rpx;
    
    font-weight: 400;
    color: #666666;
  }
  .check view span{
      color: #FE0201 !important;
  }
  .wechat{
      width: 44rpx;
      height: 36rpx;
      vertical-align: middle;
      margin-right: 10rpx;
  }