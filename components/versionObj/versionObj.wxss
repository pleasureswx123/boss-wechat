/* components/versionList/versionList.wxss */
.itemBox {
  background: #FFFFFF;
  border-radius: 16rpx;
  border-image: linear-gradient(302deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 1)) 2 2;
  backdrop-filter: blur(10px);
  padding: 32rpx 36rpx 0;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  /* height: 100%; */
}

.itemBox-title {
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  /* min-height: 27px; */
}
.onlineCircle {
  width: 12rpx;
  height: 12rpx;
  background: #58FD50;
  border-radius: 12rpx;
  position: absolute;
  left: 20px;
  top: 10rpx;
}

.title-jipin {
  display: flex;
  /* align-items: center; */
}

.jipin {
  display: inline-block;
  font-size: 30px;
  animation: shake 3s infinite;
}

@keyframes shake {
  0% {
    transform: translateX(0);
  }

  25% {
    transform: translateX(-2px);
  }

  50% {
    transform: translateX(2px);
  }

  75% {
    transform: translateX(-2px);
  }

  100% {
    transform: translateX(0);
  }
}

.title-text {
  /* 2024.03.26 ghy 修改  /* min-height: 27px;*/
  height: 54rpx;
  line-height: 54rpx;
  overflow: hidden;
  font-weight: 500;
  color: #1D2129;
  line-height: 50rpx;
  /* margin-left: 10rpx; */
  /* max-width: 326rpx; */
  max-width: 450rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 岗位薪资/是否有红包 */
.itemBox-salary {
  line-height: 27px;
  display: flex;
  /* align-items: center; */
}

.itemBox-salary .salary-text {
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FE0201;
  line-height: 44rpx;
  margin-right: 8rpx;
}

.salary-hb{
  display: flex;
  justify-content: flex-start;
  /* align-items: ; */
}

.salary-hb .hongICon {
  object-fit: contain;
  vertical-align: middle;
  width: 32rpx;
  height: 36rpx;
  margin-left: 8rpx;
  margin-bottom: 6rpx;
  animation: shake1 1.5s linear infinite;
  padding-top: 6rpx;
  /* text-align: center */
}

.itemBox-introduce {
  line-height: 10px;
  margin: 10rpx 0 0;
}

.itemBox-introduce .span {
  padding-right: 10px;
  max-width: 30%;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #272E3B;
  line-height: 20px;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 5rpx;
}

/* 岗位标签/知城核验 */
.itemBox-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 10px;
  height: 52rpx;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.itemBox-tags .tagItem {
  height: 48rpx;
  background: #F7F7F7;
  border-radius: 8rpx;
  padding: 0 22rpx 0 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #4E5969;
}

.isExamine {
  background: #E5FFF5;
  border-radius: 8rpx;
  height: 47rpx;
  display: flex;
  align-items: center;
  padding: 0rpx 12rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.isExamine image {
  width: 24rpx;
  height: 29rpx;
  margin-right: 6rpx;
  margin-top: -4rpx;
}

.isExamine .text {
  font-size: 22rpx;
  font-weight: 600;
  color: #666666;
  background: linear-gradient(279deg, #44D7FF 0%, #91DA7D 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 无实探 */
.itemBox-content {
  /* margin-top: 8px; */
  display: flex;
  align-items: center;
}

.itemBox-content .left-inviteInfo {
  display: flex;
  align-items: center;
  position: relative;
}

.itemBox-content .left-inviteInfo .avatar {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  margin-right: 7px;
}

.itemBox-content .left-inviteInfo .info {
  display: flex;
  flex-direction: column;
}

.itemBox-content .left-inviteInfo .info .companyName {
  font-size: 12px;
  font-weight: 400;
  color: #4E5969;
  max-width: 180px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.itemBox-content .left-inviteInfo .info .invitePerson {
  font-size: 11px;
  font-weight: 400;
  color: #86909C;
}

.itemBox-content .content {
  display: flex;
  flex: 1;
  align-items: center;
  width: 0;
  text-align: right;
  margin: 0 8rpx 0 46rpx;
}

.itemBox-content .content view {
  width: 100%;
  font-size:12px;
  font-weight: 400;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.itemBox-content .content view image{
  width: 16rpx;
  height: 20rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.communicateButton {
  height: 46rpx;
  background: linear-gradient(278deg, #FF7979 0%, #FE0201 100%);
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
  padding: 0 18rpx 0 20rpx;
  line-height: 46rpx;
}

/* 有实探 */
.itemBox-content1 {
  margin-top: 16rpx;
  position: relative;
}

.itemBox-content1 .top-inviteInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.itemBox-content1 .top-inviteInfo .left {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 36rpx;
  overflow: hidden;
  position: relative;
}

.itemBox-content1 .top-inviteInfo .left .avatar {
  min-width: 53rpx;
  width: 53rpx;
  height: 53rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}

.itemBox-content1 .top-inviteInfo .left text {
  font-size: 24rpx;
  font-weight: 400;
  color: #1D2129;
  line-height: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.itemBox-content1 .top-inviteInfo .right {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx;
}

/* scroll-view */
.itemBox-content1 .center-scroll-view {
  white-space: nowrap;
  width: 100%;
  height: 124rpx;
  margin-top: 14rpx;
}

.scroll-view-item {
  display: inline-block;
  width: 242rpx;
  height: 100%;
  margin-right: 22rpx;
  border-radius: 8rpx;
  background: #D8D8D8;
}

.scroll-view-item image{
  border-radius: 8rpx;
}



.itemBox-content1 .button-address {
  position: absolute;
  right: 0;
  top:50%;
  transform: translateY(-50%);
  /* margin-top: 34rpx; */
}

.itemBox-content1 .button-address .text {
  font-weight: 400;
  font-size: 24rpx;
  color: #666666;
  line-height: 34rpx;
}

.itemBox-content1 .button-address .center {
  flex: 1;
  overflow: hidden;
  margin: 0 26rpx;
}

.itemBox-content1 .button-address .center view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


/* 红包动画 */
@keyframes shake1 {
  0% {
    transform: rotate(0deg);
  }

  25% {
    transform: rotate(15deg);
  }

  50% {
    transform: rotate(0deg);
  }

  75% {
    transform: rotate(-15deg);
  }

  100% {
    transform: rotate(0deg);
  }
}

.custom-loader-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  width: 100%;
  line-height: 60px;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.custom-loader-loading image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* font-weight: 500; */
  font-size: 12px;
  color: #999999;
  padding: 8px 0 15px 0;
}

.empty-text1 {
  padding-bottom: 16rpx;
}

.prv-loadmore {
  height: 60px;
  width: 100%;
  line-height: 60px;
  text-align: center;
  font-size: 26rpx;
}

.prv-loadmore text {
  /* color: #444; */
  color: #999999;
}