.cityBox {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.cityBox_main {
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.backIcon {
  display: flex;
  align-items: center;
  position: relative;
  background: #F5F5F5;
}

.closeIcon {
  position: absolute;
  left: 32rpx;
}

.van-nav-bar__title {
  font-size: 36rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 550;
  color: #1D2129;
  width: 100%;
  text-align: center;
}


.selectCity_content {
  /* display: flex;
    align-items: center; */
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  flex: 1;
  overflow: hidden;
}

.selectCity_content .cityList {
  width: 100%;
  border-right: 2rpx solid rgba(151, 151, 151, 0.1);
  overflow: auto;
}

.selectCity_content .cityList .cityItem {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #1D2129;
}

.activeName {
  color: #FE0201 !important;
}


.cityFliter {
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
  /* position: fixed;
    bottom: 0;
    left: 0;
    right: 0; */
  display: flex;
  flex-direction: column;
  padding: 0 48rpx 30rpx;
  box-sizing: border-box;
}

.cityMultiple {
  height: 60rpx;
  width: 100%;
  display: flex;
  /* padding-bottom: 26rpx; */
  padding-top: 12rpx;
}

.selected {
  text-align: center;
  line-height: 60rpx;
  padding-right: 40rpx;
  width: 50px;
}

.selected text {
  font-size: 28rpx;
  
  font-weight: 400;
  color: #1D2129;
}

.popup-button {
  padding: 18rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}


.comfirm {
  line-height: 80rpx;
  width: 100%;
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  font-size: 32rpx;
  
  font-weight: 400;
  color: #FFFFFF;
}


.multipleList {
  display: flex;
}

.multipleItem {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.multipleItembg {
  display: flex;
  align-items: center;
  height: 62rpx;
  background: rgba(255, 197, 197, 0.4);
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.multipleItembg .text {
  display: inline-block;
  font-size: 24rpx;
  
  font-weight: 400;
  color: #FE0201;
  line-height: 46rpx;
  text-align: center;
  padding-right: 16rpx;
}

.multipleItembg .padding0 {
  padding: 0 10rpx;
}

.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  /* background: #000; */
}

.cityBox_main-head{
  position: relative;
  width: 100%;
}

.search {
  width: 100%;
  color: #1D2129;
  /* font-size: 14px; */
  background: #fff;
  position: absolute;
  border-radius: 50px;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 550;
  color: #1D2129;
}

.nav-bar .search .nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 550;
  color: #1D2129;
}