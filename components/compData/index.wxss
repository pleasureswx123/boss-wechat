.selecetedIndicator {
  height: 50px;
  position: relative;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  border-radius: 16rpx;
}
.selecetedIndicatorBox{
  position: relative;height: 300rpx;background: #F7F7F7;
}

.selecetedIndicator::after {
  display: none;
}

.selecetedIndicator::before {
  display: none;
}

.columnStyle {
  line-height: 52px;
  color: #666666;
  font-weight: 500;
  font-size: 32rpx;
  margin: auto 0;
  background: #F7F7F7;
}
.picker-view {
  width: 570rpx;
  height: 300rpx;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.activeSize{
  font-size: 32rpx;
  color: #1D2129;
  font-weight: 500;
  /* border-top: 2rpx solid #666666; */
}

.leftPay {
  border-radius: 8rpx 0 0 8rpx;
}

.rightPay {
  border-radius: 0 8rpx 8rpx 0;
}

.middle {
  background: #f5f5f5;
  height: 100rpx;
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 99;
}
