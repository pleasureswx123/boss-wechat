/* components/popup-treatment/popup-treatment.wxss */
.companyWelfare {
    padding: 0rpx 42rpx 0 48rpx;
}

scroll-view ::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

.itemStyle_top {
    padding: 0;
    margin-bottom: 40rpx;
}

.itemStyle_top text:nth-child(1) {
    display: inline-block;
    /* width: 400rpx; */
    height: 52rpx;
    font-size: 44rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 60rpx;
    margin-top: 50rpx;
}

.itemStyle_top text:nth-child(2) {
    padding-top: 30rpx;
    display: inline-block;
    /* width: 660rpx; */
    height: 84rpx;
    font-size: 30rpx;
    
    font-weight: 400;
    color: #1D2129;
    line-height: 42rpx;
}

.workTime {
    padding: 40rpx 0 60rp;
    color: #1D2129;
    display: flex;
    flex-direction: column;
}

.workTime text:nth-child(1) {
    height: 36rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    line-height: 42rpx;
}

.workTime text:nth-child(2) {
    padding-top: 24rpx;
    height: 36rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Light, PingFang SC;
    font-weight: 300;
    line-height: 36rpx;
}

/* 员工福利 */
.staffWelfare {
  margin-top: 40rpx;
}

.staffWelfare .title {
    height: 36rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #1D2129;
    line-height: 42rpx;
}

.welfareList {
    padding-top: 24rpx;
}

.welfareItem {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.welfareItem_left {
    margin-right: 30rpx;
    width: 50rpx;
    height: 50rpx;
}

.welfareItem_left image {
    width: 100%;
    height: 100%;
}

.welfareItem_right {
    flex: 1;
    display: flex;
    flex-direction: column;
    font-weight: 400;
    
}

.welfareItem_right text:nth-child(1) {
    height: 40rpx;
    font-size: 28rpx;
    color: #1D2129;
    line-height: 40rpx;
}

.welfareItem_right text:nth-child(2) {
    min-height: 34rpx;
    font-size: 24rpx;
    color: #999999;
    line-height: 34rpx;
}