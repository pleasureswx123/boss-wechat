page{
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.cityBox {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.cityBox_main {
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.cityBox_main-head {
  width: 100%;
  position: relative;
}

.selectCity_content {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  overflow: hidden;
}

.scrollBox {
  width: 100%;

  display: flex;
}

.selectCity_content .cityList {
  width: 100%;
  border-right: 2rpx solid rgba(151, 151, 151, 0.1);
  overflow: auto;
}

.selectCity_content .cityList .cityItem {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #1D2129;

}

.cityMultipleList .cityItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx !important;
  box-sizing: border-box;
}

.cityMultipleText {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

