.activeName {
  color: #FE0201 !important;
}


.cityFliter {
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  padding: 0 48rpx 30rpx;
  box-sizing: border-box;
}

.cityMultiple {
  height: 60rpx;
  width: 100%;
  display: flex;
  /* padding-bottom: 26rpx; */
  padding-top: 12rpx;
}

.selected {
  text-align: center;
  line-height: 60rpx;
  padding-right: 40rpx;
  width: 50px;
}

.selected text {
  font-size: 28rpx;
  
  font-weight: 400;
  color: #1D2129;
}

.popup-button {
  padding: 18rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}


.comfirm {
  line-height: 80rpx;
  width: 100%;
  height: 80rpx;
  /* background: linear-gradient(270deg, #FF7979 0%, #F32E2E 100%); */
  background: linear-gradient(308deg, #FF7C44 0%, #FE0000 46%, #FF6E67 100%);
  border-radius: 12rpx;
  font-size: 32rpx;
  
  font-weight: 400;
  color: #FFFFFF;
}


.multipleList {
  display: flex;
}

.multipleItem {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.multipleItembg {
  display: flex;
  align-items: center;
  height: 62rpx;
  background: rgba(255, 197, 197, 0.4);
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.multipleItembg .text {
  display: inline-block;
  font-size: 24rpx;
  
  font-weight: 400;
  color: #FE0201;
  line-height: 46rpx;
  text-align: center;
  padding-right: 16rpx;
}

.multipleItembg .padding0 {
  padding: 0 10rpx;
}

.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  /* background: #000; */
}

.search {
  width: 100%;
  color: #1D2129;
  font-size: 46rpx;
  font-weight: 550;
  background: #fff;
  position: absolute;
  text-align: center;
  border-radius: 50px;
  top: 50%;
  transform: translateY(-50%);
}